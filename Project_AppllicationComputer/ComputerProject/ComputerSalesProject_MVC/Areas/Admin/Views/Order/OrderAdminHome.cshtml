@model ComputerSales.Application.UseCaseDTO.Order_DTO.GetOrdersList.GetOrdersListResultDTO
@using ComputerSales.Domain.Entity.E_Order;
@{
    ViewData["Title"] = "Quản lý đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="space-y-6">
    <!-- Header Section -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
            <!-- Header with gradient background -->
            <div class="bg-gradient-to-r from-indigo-600 via-purple-600 to-blue-600 px-8 py-6">
                <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                    <div class="flex items-center gap-4">
                        <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center">
                            <i class="fas fa-shopping-cart text-white text-xl"></i>
                        </div>
                        <div>
                            <h1 class="text-2xl font-bold text-white">Quản lý đơn hàng</h1>
                            <p class="text-indigo-100 text-sm">Theo dõi và quản lý tất cả đơn hàng</p>
                        </div>
                    </div>
                    <div class="flex items-center gap-4">
                        <div class="bg-white/20 rounded-lg px-4 py-2">
                            <div class="text-white text-sm">Tổng đơn hàng</div>
                            <div class="text-white text-2xl font-bold">@Model.TotalCount</div>
                        </div>
                        <button class="bg-white/20 hover:bg-white/30 text-white px-4 py-2 rounded-lg transition-colors">
                            <i class="fas fa-download mr-2"></i>Xuất Excel
                        </button>
                    </div>
                </div>
            </div>
            
            <!-- Filter Section -->
            <div class="p-6 border-b border-gray-100">
                <div class="flex flex-col gap-4">
                    <!-- Search and Filter Row -->
                    <div class="flex flex-col lg:flex-row gap-4">
                        <!-- Search Box -->
                        <div class="flex-1">
                            <div class="relative">
                                <input type="text" placeholder="Tìm kiếm theo mã đơn hàng, khách hàng..." 
                                       class="w-full pl-10 pr-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
                                <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                            </div>
                        </div>
                        
                        <!-- Status Filters -->
                        <div class="flex flex-wrap gap-2">
                            <a href="@Url.Action("OrderAdminHome", new { status = (OrderStatus?)null, page = 1 })"
                               class="px-4 py-2 rounded-lg text-sm font-medium transition-all @(ViewBag.StatusFilter == null ? "bg-indigo-600 text-white shadow-lg" : "bg-gray-100 text-gray-700 hover:bg-gray-200")">
                                <i class="fas fa-list mr-2"></i>Tất cả
                            </a>
                            <a href="@Url.Action("OrderAdminHome", new { status = OrderStatus.ChoXacNhan, page = 1 })"
                               class="px-4 py-2 rounded-lg text-sm font-medium transition-all @(ViewBag.StatusFilter == OrderStatus.ChoXacNhan ? "bg-amber-500 text-white shadow-lg" : "bg-amber-50 text-amber-700 hover:bg-amber-100")">
                                <i class="fas fa-clock mr-2"></i>Chờ xác nhận
                            </a>
                            <a href="@Url.Action("OrderAdminHome", new { status = OrderStatus.DangDongGoi, page = 1 })"
                               class="px-4 py-2 rounded-lg text-sm font-medium transition-all @(ViewBag.StatusFilter == OrderStatus.DangDongGoi ? "bg-sky-500 text-white shadow-lg" : "bg-sky-50 text-sky-700 hover:bg-sky-100")">
                                <i class="fas fa-box mr-2"></i>Đang đóng gói
                            </a>
                            <a href="@Url.Action("OrderAdminHome", new { status = OrderStatus.DangGiao, page = 1 })"
                               class="px-4 py-2 rounded-lg text-sm font-medium transition-all @(ViewBag.StatusFilter == OrderStatus.DangGiao ? "bg-blue-600 text-white shadow-lg" : "bg-blue-50 text-blue-700 hover:bg-blue-100")">
                                <i class="fas fa-truck mr-2"></i>Đang giao
                            </a>
                            <a href="@Url.Action("OrderAdminHome", new { status = OrderStatus.DaGiaoThanhCong, page = 1 })"
                               class="px-4 py-2 rounded-lg text-sm font-medium transition-all @(ViewBag.StatusFilter == OrderStatus.DaGiaoThanhCong ? "bg-emerald-600 text-white shadow-lg" : "bg-emerald-50 text-emerald-700 hover:bg-emerald-100")">
                                <i class="fas fa-check-circle mr-2"></i>Đã giao
                            </a>
                            <a href="@Url.Action("OrderAdminHome", new { status = OrderStatus.DaHuy, page = 1 })"
                               class="px-4 py-2 rounded-lg text-sm font-medium transition-all @(ViewBag.StatusFilter == OrderStatus.DaHuy ? "bg-rose-600 text-white shadow-lg" : "bg-rose-50 text-rose-700 hover:bg-rose-100")">
                                <i class="fas fa-times-circle mr-2"></i>Đã hủy
                            </a>
                        </div>
                    </div>

                    <!-- Mobile: one button toggles a dropdown menu -->
                    <div class="md:hidden relative">
                        <button id="statusFilterBtn" type="button" class="inline-flex items-center gap-2 rounded-md border border-gray-300 bg-white px-3 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50">
                            Bộ lọc trạng thái
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4"><path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 0 1 1.06.02L10 10.261l3.71-3.03a.75.75 0 1 1 .94 1.17l-4.18 3.41a.75.75 0 0 1-.94 0l-4.18-3.41a.75.75 0 0 1-.02-1.06Z" clip-rule="evenodd"/></svg>
                        </button>
                        <div id="statusFilterMenu" class="hidden absolute z-20 mt-2 w-56 rounded-md border border-gray-200 bg-white shadow-lg">
                            <div class="py-1 text-sm">
                                <a class="block px-3 py-2 hover:bg-gray-50" href="@Url.Action("OrderAdminHome", new { status = (OrderStatus?)null, page = 1 })">Tất cả</a>
                                <a class="block px-3 py-2 hover:bg-gray-50" href="@Url.Action("OrderAdminHome", new { status = OrderStatus.ChoXacNhan, page = 1 })">Chờ xác nhận</a>
                                <a class="block px-3 py-2 hover:bg-gray-50" href="@Url.Action("OrderAdminHome", new { status = OrderStatus.DangDongGoi, page = 1 })">Đang đóng gói</a>
                                <a class="block px-3 py-2 hover:bg-gray-50" href="@Url.Action("OrderAdminHome", new { status = OrderStatus.DangGiao, page = 1 })">Đang giao</a>
                                <a class="block px-3 py-2 hover:bg-gray-50" href="@Url.Action("OrderAdminHome", new { status = OrderStatus.DaGiaoThanhCong, page = 1 })">Đã giao</a>
                                <a class="block px-3 py-2 hover:bg-gray-50" href="@Url.Action("OrderAdminHome", new { status = OrderStatus.DaHuy, page = 1 })">Đã hủy</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Orders Table Section -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
            <!-- Table Header -->
            <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-6 py-4 border-b border-gray-200">
                <div class="flex items-center justify-between">
                    <h2 class="text-lg font-semibold text-gray-900">Danh sách đơn hàng</h2>
                    <div class="flex items-center gap-2 text-sm text-gray-600">
                        <i class="fas fa-info-circle"></i>
                        <span>Hiển thị @Model.Orders.Count() trong tổng số @Model.TotalCount đơn hàng</span>
                    </div>
                </div>
            </div>

            <!-- Table -->
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                <i class="fas fa-hashtag mr-2"></i>Mã đơn
                            </th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                <i class="fas fa-calendar mr-2"></i>Ngày đặt
                            </th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                <i class="fas fa-user mr-2"></i>Khách hàng
                            </th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                <i class="fas fa-info-circle mr-2"></i>Trạng thái
                            </th>
                            <th class="px-6 py-4 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                <i class="fas fa-money-bill mr-2"></i>Tổng tiền
                            </th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                <i class="fas fa-sticky-note mr-2"></i>Ghi chú
                            </th>
                            <th class="px-6 py-4 text-center text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                <i class="fas fa-cogs mr-2"></i>Hành động
                            </th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-100 bg-white">
                        @if (Model.Orders.Any())
                        {
                            @foreach (var order in Model.Orders)
                            {
                                <tr class="hover:bg-gradient-to-r hover:from-indigo-50 hover:to-blue-50 transition-all duration-200 group">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="w-8 h-8 bg-indigo-100 rounded-lg flex items-center justify-center mr-3 group-hover:bg-indigo-200 transition-colors">
                                                <i class="fas fa-receipt text-indigo-600 text-sm"></i>
                                            </div>
                                            <div>
                                                <div class="text-sm font-semibold text-gray-900">#@order.OrderID</div>
                                                <div class="text-xs text-gray-500">Đơn hàng</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-900">@order.OrderTime.ToString("dd/MM/yyyy")</div>
                                        <div class="text-xs text-gray-500">@order.OrderTime.ToString("HH:mm")</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="w-8 h-8 bg-gray-100 rounded-full flex items-center justify-center mr-3">
                                                <i class="fas fa-user text-gray-600 text-sm"></i>
                                            </div>
                                            <div class="text-sm font-medium text-gray-900">@order.IDCustomer</div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        @switch (order.OrderStatus)
                                        {
                                            case ComputerSales.Domain.Entity.E_Order.OrderStatus.ChoXacNhan:
                                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-amber-100 text-amber-800 border border-amber-200">
                                                    <i class="fas fa-clock mr-1.5"></i>Chờ xác nhận
                                                </span>
                                                break;
                                            case ComputerSales.Domain.Entity.E_Order.OrderStatus.DangDongGoi:
                                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-sky-100 text-sky-800 border border-sky-200">
                                                    <i class="fas fa-box mr-1.5"></i>Đang đóng gói
                                                </span>
                                                break;
                                            case ComputerSales.Domain.Entity.E_Order.OrderStatus.DangGiao:
                                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 border border-blue-200">
                                                    <i class="fas fa-truck mr-1.5"></i>Đang giao
                                                </span>
                                                break;
                                            case ComputerSales.Domain.Entity.E_Order.OrderStatus.DaGiaoThanhCong:
                                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-emerald-100 text-emerald-800 border border-emerald-200">
                                                    <i class="fas fa-check-circle mr-1.5"></i>Đã giao thành công
                                                </span>
                                                break;
                                            case ComputerSales.Domain.Entity.E_Order.OrderStatus.DaHuy:
                                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-rose-100 text-rose-800 border border-rose-200">
                                                    <i class="fas fa-times-circle mr-1.5"></i>Đã hủy
                                                </span>
                                                break;
                                        }
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-right">
                                        <div class="text-sm font-bold text-emerald-600">@order.GrandTotal.ToString("N0") VNĐ</div>
                                        <div class="text-xs text-gray-500">Tổng cộng</div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <div class="text-sm text-gray-600 max-w-xs">
                                            @if (!string.IsNullOrEmpty(order.OrderNote))
                                            {
                                                <div class="truncate" title="@order.OrderNote">
                                                    @(order.OrderNote.Length > 40 ? order.OrderNote.Substring(0, 40) + "..." : order.OrderNote)
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-gray-400 italic">Không có ghi chú</span>
                                            }
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-center">
                                        <div class="flex items-center justify-center gap-2">
                                            <a href="@Url.Action("OrderGet", new { id = order.OrderID })" 
                                               class="inline-flex items-center px-3 py-1.5 rounded-lg text-xs font-medium text-indigo-700 bg-indigo-50 hover:bg-indigo-100 transition-colors">
                                                <i class="fas fa-eye mr-1.5"></i>Xem
                                            </a>
                                            @if (order.OrderStatus != ComputerSales.Domain.Entity.E_Order.OrderStatus.DangGiao && 
                                                 order.OrderStatus != ComputerSales.Domain.Entity.E_Order.OrderStatus.DaGiaoThanhCong &&
                                                 order.OrderStatus != ComputerSales.Domain.Entity.E_Order.OrderStatus.DaHuy)
                                            {
                                                <button type="button" onclick="cancelOrder(@order.OrderID)"
                                                        class="inline-flex items-center px-3 py-1.5 rounded-lg text-xs font-medium text-white bg-rose-600 hover:bg-rose-700 transition-colors">
                                                    <i class="fas fa-times mr-1.5"></i>Hủy
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="px-6 py-16 text-center">
                                    <div class="flex flex-col items-center">
                                        <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mb-4">
                                            <i class="fas fa-shopping-cart text-gray-400 text-2xl"></i>
                                        </div>
                                        <h3 class="text-lg font-medium text-gray-900 mb-2">Không có đơn hàng nào</h3>
                                        <p class="text-gray-500 text-sm">Chưa có đơn hàng nào được tìm thấy với bộ lọc hiện tại.</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <div class="bg-gray-50 px-6 py-4 border-t border-gray-200">
                    <div class="flex items-center justify-between">
                        <div class="text-sm text-gray-700">
                            Hiển thị trang <span class="font-medium">@ViewBag.CurrentPage</span> trong tổng số <span class="font-medium">@ViewBag.TotalPages</span> trang
                        </div>
                        <div class="flex items-center gap-2">
                            @if (ViewBag.HasPreviousPage)
                            {
                                <a class="inline-flex items-center px-3 py-2 rounded-lg text-sm font-medium text-gray-700 bg-white border border-gray-300 hover:bg-gray-50 transition-colors" 
                                   href="@Url.Action("OrderAdminHome", new { status = ViewBag.StatusFilter, page = ViewBag.CurrentPage - 1 })">
                                    <i class="fas fa-chevron-left mr-1.5"></i>Trước
                                </a>
                            }
                            
                            <div class="flex items-center gap-1">
                                @for (int i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2); i++)
                                {
                                    <a class="inline-flex items-center justify-center w-10 h-10 rounded-lg text-sm font-medium transition-colors @(i == ViewBag.CurrentPage ? "bg-indigo-600 text-white shadow-lg" : "text-gray-700 bg-white border border-gray-300 hover:bg-gray-50")" 
                                       href="@Url.Action("OrderAdminHome", new { status = ViewBag.StatusFilter, page = i })">@i</a>
                                }
                            </div>
                            
                            @if (ViewBag.HasNextPage)
                            {
                                <a class="inline-flex items-center px-3 py-2 rounded-lg text-sm font-medium text-gray-700 bg-white border border-gray-300 hover:bg-gray-50 transition-colors" 
                                   href="@Url.Action("OrderAdminHome", new { status = ViewBag.StatusFilter, page = ViewBag.CurrentPage + 1 })">
                                    Sau<i class="fas fa-chevron-right ml-1.5"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script>
    (function(){
        var btn = document.getElementById('statusFilterBtn');
        var menu = document.getElementById('statusFilterMenu');
        if (btn && menu) {
            btn.addEventListener('click', function(){
                menu.classList.toggle('hidden');
            });
            document.addEventListener('click', function(e){
                if (!btn.contains(e.target) && !menu.contains(e.target)) {
                    menu.classList.add('hidden');
                }
            });
        }
    })();
    function cancelOrder(orderId) {
        const reason = prompt('Nhập lý do hủy (tuỳ chọn):', '');
        if (!confirm('Xác nhận hủy đơn #' + orderId + '?')) return;

        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '@Url.Action("CancelOrder")';

        const idInput = document.createElement('input');
        idInput.type = 'hidden';
        idInput.name = 'orderId';
        idInput.value = orderId;

        const reasonInput = document.createElement('input');
        reasonInput.type = 'hidden';
        reasonInput.name = 'cancelReason';
        reasonInput.value = reason || '';

        form.appendChild(idInput);
        form.appendChild(reasonInput);
        document.body.appendChild(form);
        form.submit();
    }
</script>
