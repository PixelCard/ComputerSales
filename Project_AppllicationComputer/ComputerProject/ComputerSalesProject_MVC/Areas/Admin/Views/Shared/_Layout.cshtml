<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin</title>

    <!-- Tailwind + FontAwesome -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 text-gray-900">

    <!-- Header -->
    <header class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white p-4 shadow-md">
        <div class="max-w-7xl mx-auto flex justify-between items-center">
            <h1 class="text-2xl font-bold">Admin Panel</h1>
            <nav>
                <a asp-area="Admin" asp-controller="Accounts" asp-action="Index" class="px-3 hover:underline">Tài khoản</a>
                <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="px-3 hover:underline">Sản phẩm</a>
            </nav>
        </div>
    </header>

    <!-- Main content -->
    <main class="max-w-7xl mx-auto p-6">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white text-center py-4 mt-10">
        &copy; 2025 - ComputerSales Admin
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
