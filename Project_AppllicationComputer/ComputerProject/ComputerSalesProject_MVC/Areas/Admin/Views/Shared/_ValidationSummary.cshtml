@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <strong>Vui lòng kiểm tra lại:</strong>
        <ul class="mb-0">
            @foreach (var kv in ViewData.ModelState)
            {
                foreach (var err in kv.Value.Errors)
                {
                    <li>@err.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}
