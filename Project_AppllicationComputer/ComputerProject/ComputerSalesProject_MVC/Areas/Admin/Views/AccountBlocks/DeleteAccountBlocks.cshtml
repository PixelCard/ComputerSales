@using ComputerSales.Application.UseCaseDTO.AccountBlock_DTO
@model AccountBlockOutputDTO
@{
    ViewData["Title"] = "Delete Block";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}

<!-- Page Header -->
<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-8">
    <div class="mb-4 sm:mb-0">
        <h1 class="text-3xl font-bold text-gray-900 flex items-center">
            <i class="fas fa-trash-alt text-red-500 mr-3"></i>
            Delete Account Block
        </h1>
        <p class="text-gray-600 mt-2">Permanently remove account block #@Model.BlockId</p>
    </div>
    <a class="inline-flex items-center px-4 py-2 bg-gray-500 hover:bg-gray-600 text-white font-medium rounded-lg shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200"
       asp-area="Admin"
       asp-controller="AccountBlocks"
       asp-action="AccountBlocksDetails"
       asp-route-id="@Model.BlockId">
        <i class="fas fa-arrow-left mr-2"></i>
        Back to Details
    </a>
</div>

<!-- Warning Alert -->
<div class="mb-6 bg-red-50 border border-red-200 rounded-lg p-6">
    <div class="flex items-start">
        <div class="flex-shrink-0">
            <i class="fas fa-exclamation-triangle text-red-500 text-xl"></i>
        </div>
        <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800 mb-2">Warning: Irreversible Action</h3>
            <div class="text-sm text-red-700">
                <p class="mb-2">You are about to permanently delete this account block. This action cannot be undone.</p>
                <ul class="list-disc list-inside space-y-1">
                    <li>The account will be immediately unblocked</li>
                    <li>All block history will be lost</li>
                    <li>This action cannot be reversed</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Block Information Card -->
<div class="bg-white rounded-xl shadow-lg overflow-hidden mb-6">
    <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900 flex items-center">
            <i class="fas fa-info-circle text-blue-500 mr-2"></i>
            Block Information to be Deleted
        </h2>
    </div>
    
    <div class="p-6">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <!-- Left Column -->
            <div class="space-y-4">
                <!-- Block ID -->
                <div class="flex flex-col sm:flex-row sm:items-center">
                    <dt class="text-sm font-medium text-gray-500 mb-1 sm:mb-0 sm:w-1/3">
                        <i class="fas fa-hashtag mr-2"></i>Block ID
                    </dt>
                    <dd class="text-sm text-gray-900 font-mono bg-gray-100 px-3 py-2 rounded-md">
                        #@Model.BlockId
                    </dd>
                </div>

                <!-- Account ID -->
                <div class="flex flex-col sm:flex-row sm:items-center">
                    <dt class="text-sm font-medium text-gray-500 mb-1 sm:mb-0 sm:w-1/3">
                        <i class="fas fa-user mr-2"></i>Account ID
                    </dt>
                    <dd class="text-sm text-gray-900">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                            @Model.IDAccount
                        </span>
                    </dd>
                </div>

                <!-- Block From -->
                <div class="flex flex-col sm:flex-row sm:items-center">
                    <dt class="text-sm font-medium text-gray-500 mb-1 sm:mb-0 sm:w-1/3">
                        <i class="fas fa-clock mr-2"></i>Block From (UTC)
                    </dt>
                    <dd class="text-sm text-gray-900">
                        <div class="flex items-center">
                            <i class="fas fa-calendar-alt text-gray-400 mr-2"></i>
                            <span class="font-mono">@Model.BlockFromUtc.ToString("yyyy-MM-dd HH:mm:ss")</span>
                        </div>
                    </dd>
                </div>
            </div>

            <!-- Right Column -->
            <div class="space-y-4">
                <!-- Block To -->
                <div class="flex flex-col sm:flex-row sm:items-center">
                    <dt class="text-sm font-medium text-gray-500 mb-1 sm:mb-0 sm:w-1/3">
                        <i class="fas fa-clock mr-2"></i>Block To (UTC)
                    </dt>
                    <dd class="text-sm text-gray-900">
                        @if (Model.BlockToUtc.HasValue)
                        {
                            <div class="flex items-center">
                                <i class="fas fa-calendar-alt text-gray-400 mr-2"></i>
                                <span class="font-mono">@Model.BlockToUtc.Value.ToString("yyyy-MM-dd HH:mm:ss")</span>
                            </div>
                        }
                        else
                        {
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                <i class="fas fa-infinity mr-1"></i>
                                Permanent Block
                            </span>
                        }
                    </dd>
                </div>

                <!-- Current Status -->
                <div class="flex flex-col sm:flex-row sm:items-center">
                    <dt class="text-sm font-medium text-gray-500 mb-1 sm:mb-0 sm:w-1/3">
                        <i class="fas fa-exclamation-circle mr-2"></i>Current Status
                    </dt>
                    <dd class="text-sm text-gray-900">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @(Model.IsActiveNowUtc ? "bg-red-100 text-red-800" : "bg-green-100 text-green-800")">
                            <i class="fas @(Model.IsActiveNowUtc ? "fa-lock" : "fa-unlock") mr-1"></i>
                            @(Model.IsActiveNowUtc ? "Currently Blocked" : "Currently Free")
                        </span>
                    </dd>
                </div>
            </div>
        </div>

        <!-- Reason Section -->
        <div class="mt-6 pt-6 border-t border-gray-200">
            <dt class="text-sm font-medium text-gray-500 mb-3">
                <i class="fas fa-comment mr-2"></i>Block Reason
            </dt>
            <dd class="text-sm text-gray-900">
                @if (!string.IsNullOrEmpty(Model.ReasonBlock))
                {
                    <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                        <p class="text-gray-900 leading-relaxed whitespace-pre-wrap break-words">@Model.ReasonBlock</p>
                    </div>
                }
                else
                {
                    <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                        <span class="text-gray-400 italic">No reason provided for this block.</span>
                    </div>
                }
            </dd>
        </div>
    </div>
</div>

<!-- Confirmation Form -->
<form asp-area="Admin" asp-controller="AccountBlocks" asp-action="Delete" asp-route-id="@Model.BlockId" method="post" class="bg-white rounded-xl shadow-lg overflow-hidden">
    <div class="px-6 py-4 bg-red-50 border-b border-red-200">
        <h2 class="text-lg font-semibold text-red-900 flex items-center">
            <i class="fas fa-exclamation-triangle mr-2"></i>
            Confirm Deletion
        </h2>
    </div>
    
    <div class="p-6">
        <div class="flex items-center mb-4">
            <input type="checkbox" id="confirmDelete" class="h-4 w-4 text-red-600 focus:ring-red-500 border-gray-300 rounded">
            <label for="confirmDelete" class="ml-2 block text-sm text-gray-900">
                I understand that this action is <strong>irreversible</strong> and will permanently delete this account block.
            </label>
        </div>
        
        <div class="flex flex-col sm:flex-row gap-3">
            <button type="submit" 
                    id="deleteButton"
                    disabled
                    class="flex-1 sm:flex-none inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 text-white font-medium rounded-lg shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200 disabled:opacity-50 disabled:cursor-not-allowed disabled:transform-none">
                <i class="fas fa-trash mr-2"></i>
                Delete Block Permanently
            </button>
            <a class="flex-1 sm:flex-none inline-flex items-center justify-center px-6 py-3 bg-gray-500 hover:bg-gray-600 text-white font-medium rounded-lg shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200"
               asp-area="Admin"
               asp-controller="AccountBlocks"
               asp-action="AccountBlocksDetails"
               asp-route-id="@Model.BlockId">
                <i class="fas fa-times mr-2"></i>
                Cancel
            </a>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        // Enable/disable delete button based on checkbox
        const confirmCheckbox = document.getElementById('confirmDelete');
        const deleteButton = document.getElementById('deleteButton');
        
        if (confirmCheckbox && deleteButton) {
            confirmCheckbox.addEventListener('change', function() {
                deleteButton.disabled = !this.checked;
            });
        }
    </script>
}
