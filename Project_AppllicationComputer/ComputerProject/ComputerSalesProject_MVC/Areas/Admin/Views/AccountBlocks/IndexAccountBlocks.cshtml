@using ComputerSales.Application.UseCaseDTO.AccountBlock_DTO
@model IEnumerable<AccountBlockOutputDTO>
@{
    ViewData["Title"] = "Account Blocks";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}

<!-- Page Header -->
<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-8">
    <div class="mb-4 sm:mb-0">
        <h1 class="text-3xl font-bold text-gray-900 flex items-center">
            <i class="fas fa-ban text-red-500 mr-3"></i>
            Account Blocks Management
        </h1>
        <p class="text-gray-600 mt-2">Manage blocked accounts and their restrictions</p>
    </div>
    <a class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 text-white font-medium rounded-lg shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200"
       asp-area="Admin"
       asp-controller="AccountBlocks"
       asp-action="CreateAccountBlocks">
        <i class="fas fa-plus mr-2"></i>
        New Block
    </a>
</div>

<!-- Alert Messages -->
@if (TempData["Success"] != null)
{
    <div class="mb-6 bg-green-50 border border-green-200 rounded-lg p-4 flex items-center">
        <i class="fas fa-check-circle text-green-500 mr-3"></i>
        <span class="text-green-700">@TempData["Success"]</span>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="mb-6 bg-red-50 border border-red-200 rounded-lg p-4 flex items-center">
        <i class="fas fa-exclamation-triangle text-red-500 mr-3"></i>
        <span class="text-red-700">@TempData["Error"]</span>
    </div>
}

<!-- Data Table -->
<div class="bg-white rounded-xl shadow-lg overflow-hidden">
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        <i class="fas fa-hashtag mr-1"></i>ID
                    </th>
                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        <i class="fas fa-user mr-1"></i>Account ID
                    </th>
                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        <i class="fas fa-clock mr-1"></i>From (UTC)
                    </th>
                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        <i class="fas fa-clock mr-1"></i>To (UTC)
                    </th>
                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        <i class="fas fa-database mr-1"></i>DB Status
                    </th>
                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        <i class="fas fa-exclamation-circle mr-1"></i>Active Now
                    </th>
                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        <i class="fas fa-comment mr-1"></i>Reason
                    </th>
                    <th class="px-6 py-4 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                        <i class="fas fa-cogs mr-1"></i>Actions
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var x in Model)
                {
                    <tr class="hover:bg-gray-50 transition-colors duration-150">
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                            #@x.BlockId
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                @x.IDAccount
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                            <div class="flex items-center">
                                <i class="fas fa-calendar-alt text-gray-400 mr-2"></i>
                                <span class="font-mono text-xs">@x.BlockFromUtc.ToString("yyyy-MM-dd")</span>
                            </div>
                            <div class="text-xs text-gray-500 font-mono">@x.BlockFromUtc.ToString("HH:mm:ss")</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                            @if (x.BlockToUtc.HasValue)
                            {
                                <div class="flex items-center">
                                    <i class="fas fa-calendar-alt text-gray-400 mr-2"></i>
                                    <span class="font-mono text-xs">@x.BlockToUtc.Value.ToString("yyyy-MM-dd")</span>
                                </div>
                                <div class="text-xs text-gray-500 font-mono">@x.BlockToUtc.Value.ToString("HH:mm:ss")</div>
                            }
                            else
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                    <i class="fas fa-infinity mr-1"></i>
                                    Permanent
                                </span>
                            }
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @(x.IsBlock ? "bg-red-100 text-red-800" : "bg-gray-100 text-gray-800")">
                                <i class="fas @(x.IsBlock ? "fa-ban" : "fa-check") mr-1"></i>
                                @(x.IsBlock ? "Blocked" : "Active")
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @(x.IsActiveNowUtc ? "bg-red-100 text-red-800" : "bg-green-100 text-green-800")">
                                <i class="fas @(x.IsActiveNowUtc ? "fa-lock" : "fa-unlock") mr-1"></i>
                                @(x.IsActiveNowUtc ? "Blocked" : "Free")
                            </span>
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-900 max-w-xs">
                            <div class="break-words">
                                @if (!string.IsNullOrEmpty(x.ReasonBlock))
                                {
                                    <p class="text-gray-900 leading-relaxed" title="@x.ReasonBlock">
                                        @(x.ReasonBlock.Length > 100 ? x.ReasonBlock.Substring(0, 100) + "..." : x.ReasonBlock)
                                    </p>
                                }
                                else
                                {
                                    <span class="text-gray-400 italic">No reason provided</span>
                                }
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <div class="flex items-center justify-end space-x-2">
                                <a class="inline-flex items-center px-3 py-1.5 border border-blue-300 text-blue-700 bg-blue-50 hover:bg-blue-100 rounded-md text-xs font-medium transition-colors duration-150"
                                   asp-area="Admin"
                                   asp-controller="AccountBlocks"
                                   asp-action="AccountBlocksDetails"
                                   asp-route-id="@x.BlockId">
                                    <i class="fas fa-eye mr-1"></i>
                                    Details
                                </a>
                                <a class="inline-flex items-center px-3 py-1.5 border border-red-300 text-red-700 bg-red-50 hover:bg-red-100 rounded-md text-xs font-medium transition-colors duration-150"
                                   asp-area="Admin"
                                   asp-controller="AccountBlocks"
                                   asp-action="DeleteAccountBlocks"
                                   asp-route-id="@x.BlockId">
                                    <i class="fas fa-trash mr-1"></i>
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
    @if (!Model.Any())
    {
        <div class="text-center py-12">
            <i class="fas fa-ban text-gray-300 text-6xl mb-4"></i>
            <h3 class="text-lg font-medium text-gray-900 mb-2">No Account Blocks Found</h3>
            <p class="text-gray-500 mb-6">There are currently no blocked accounts in the system.</p>
            <a class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 text-white font-medium rounded-lg shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200"
               asp-area="Admin"
               asp-controller="AccountBlocks"
               asp-action="CreateAccountBlocks">
                <i class="fas fa-plus mr-2"></i>
                Create First Block
            </a>
        </div>
    }
</div>
