@model ComputerSales.Application.UseCaseDTO.Category_DTO.CategoryPagedResult
@{
    ViewData["Title"] = "Categories (Admin)";
    var q = Context.Request.Query["q"].ToString();
    var pageIndex = Model.pageIndex;
    var pageSize = Model.pageSize;
    var total = Model.totalItems;

    int pageCount = (int)System.Math.Ceiling((double)total / pageSize);
    string BuildUrl(int p) => Url.Action("Index", "Categories", new { area = "Admin", pageIndex = p, pageSize, q })!;
}

<h2>Categories</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <a class="btn btn-primary" href="@Url.Action("Create","Categories", new { area="Admin" })">+ Tạo mới</a>

    <form method="get" asp-action="Index" asp-controller="Categories" asp-area="Admin" class="d-flex" role="search">
        <input type="hidden" name="pageIndex" value="1" />
        <input type="hidden" name="pageSize" value="@pageSize" />
        <input class="form-control me-2" type="search" placeholder="Tìm theo tên..." name="q" value="@q" />
        <button class="btn btn-outline-secondary" type="submit">Tìm</button>
    </form>
</div>

@if (Model.items?.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th style="width:120px">ID</th>
                    <th>Name</th>
                    <th style="width:220px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var it in Model.items)
                {
                    <tr>
                        <td>@it.id</td>
                        <td>@it.name</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Details","Categories", new { area="Admin", id = it.id })">Xem</a>
                            <a class="btn btn-sm btn-warning" href="@Url.Action("Edit","Categories", new { area="Admin", id = it.id })">Sửa</a>
                            <a class="btn btn-sm btn-danger" href="@Url.Action("Delete","Categories", new { area="Admin", id = it.id })">Xoá</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-between align-items-center">
        <div class="text-muted">
            Tổng: <strong>@total</strong> bản ghi • Trang <strong>@pageIndex</strong>/<strong>@pageCount</strong>
        </div>

        <nav>
            <ul class="pagination mb-0">
                <li class="page-item @(pageIndex <= 1 ? "disabled" : "")">
                    <a class="page-link" href="@(pageIndex <= 1 ? "#" : BuildUrl(pageIndex - 1))">«</a>
                </li>

                @for (int p = 1; p <= pageCount; p++)
                {
                    <li class="page-item @(p == pageIndex ? "active" : "")">
                        <a class="page-link" href="@BuildUrl(p)">@p</a>
                    </li>
                }

                <li class="page-item @(pageIndex >= pageCount ? "disabled" : "")">
                    <a class="page-link" href="@(pageIndex >= pageCount ? "#" : BuildUrl(pageIndex + 1))">»</a>
                </li>
            </ul>
        </nav>
    </div>
}
else
{
    <div class="alert alert-info">Không có dữ liệu.</div>
}