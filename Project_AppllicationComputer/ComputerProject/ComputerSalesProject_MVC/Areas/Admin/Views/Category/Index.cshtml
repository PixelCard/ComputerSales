@{
    ViewData["Title"] = "Quản lý danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model ComputerSales.Application.UseCaseDTO.Category_DTO.CategoryPagedResult

@{
    var q = Context.Request.Query["q"].ToString();
    var pageIndex = Model.pageIndex;
    var pageSize = Model.pageSize;
    var total = Model.totalItems;

    int pageCount = (int)System.Math.Ceiling((double)total / pageSize);
    string BuildUrl(int p) => Url.Action("Index", "Categories", new { area = "Admin", pageIndex = p, pageSize, q })!;
}

<div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <!-- Header -->
    <div class="px-6 py-4 border-b border-gray-200 bg-gradient-to-r from-blue-50 to-white">
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
                <div class="p-2 bg-blue-100 rounded-lg">
                    <i class="fas fa-tags text-blue-600 text-lg"></i>
                </div>
                <div>
                    <h1 class="text-xl font-semibold text-gray-900">Quản lý danh mục</h1>
                    <p class="text-sm text-gray-500">Danh sách các danh mục sản phẩm trong hệ thống</p>
                </div>
            </div>
            <a href="@Url.Action("Create","Category", new { area="Admin" })" 
               class="inline-flex items-center px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-lg hover:bg-green-700 transition-colors duration-200 shadow-sm">
                <i class="fas fa-plus mr-2"></i>
                Thêm danh mục
            </a>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="mx-6 mt-4 rounded-md bg-green-50 p-4 border border-green-200 text-green-800">
            <i class="fas fa-check-circle mr-2"></i>@TempData["Success"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="mx-6 mt-4 rounded-md bg-red-50 p-4 border border-red-200 text-red-800">
            <i class="fas fa-exclamation-circle mr-2"></i>@TempData["Error"]
        </div>
    }

    <!-- Search -->
    <div class="px-6 py-4 border-b border-gray-200">
        <form method="get" asp-action="Index" asp-controller="Categories" asp-area="Admin" class="flex items-center gap-3">
            <input type="hidden" name="pageIndex" value="1" />
            <input type="hidden" name="pageSize" value="@pageSize" />
            <div class="flex-1 max-w-md">
                <div class="relative">
                    <input id="q" name="q" type="search"
                           value="@q"
                           placeholder="Tìm kiếm danh mục..."
                           class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200" />
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i class="fas fa-search text-gray-400"></i>
                    </div>
                </div>
            </div>
            <button type="submit"
                    class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200">
                <i class="fas fa-search mr-2"></i>
                Tìm kiếm
            </button>
        </form>
    </div>

    <!-- Content -->
    <div class="p-6">
        @if (Model.items?.Count > 0)
        {
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-blue-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-blue-700 uppercase tracking-wider">
                                <i class="fas fa-hashtag mr-2"></i>ID
                            </th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-blue-700 uppercase tracking-wider">
                                <i class="fas fa-tag mr-2"></i>Tên danh mục
                            </th>
                            <th class="px-6 py-3 text-right text-xs font-medium text-blue-700 uppercase tracking-wider">
                                <i class="fas fa-cogs mr-2"></i>Hành động
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var it in Model.items)
                        {
                            <tr class="hover:bg-blue-50 transition-colors duration-150">
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                        @it.id
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div class="flex-shrink-0 h-8 w-8">
                                            <div class="h-8 w-8 rounded-full bg-blue-100 flex items-center justify-center">
                                                <i class="fas fa-tag text-blue-600 text-sm"></i>
                                            </div>
                                        </div>
                                        <div class="ml-4">
                                            <div class="text-sm font-medium text-gray-900">@it.name</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <div class="flex justify-end space-x-2">
                                        <a href="@Url.Action("Details","Category", new { area="Admin", id = it.id })" 
                                           class="inline-flex items-center px-3 py-2 border border-gray-300 text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200">
                                            <i class="fas fa-eye mr-1"></i>
                                            Xem
                                        </a>
                                        <a href="@Url.Action("Edit","Category", new { area="Admin", id = it.id })" 
                                           class="inline-flex items-center px-3 py-2 border border-blue-300 text-sm leading-4 font-medium rounded-md text-blue-700 bg-white hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200">
                                            <i class="fas fa-edit mr-1"></i>
                                            Sửa
                                        </a>
                                        <a href="@Url.Action("Delete","Category", new { area="Admin", id = it.id })" 
                                           class="inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors duration-200">
                                            <i class="fas fa-trash mr-1"></i>
                                            Xóa
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <div class="mt-6 flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
                <div class="text-sm text-gray-600">
                    <i class="fas fa-list mr-1"></i>
                    Tổng: <span class="font-semibold text-gray-900">@total</span> bản ghi •
                    Trang <span class="font-semibold text-gray-900">@pageIndex</span>/<span class="font-semibold text-gray-900">@pageCount</span>
                </div>

                <nav class="flex">
                    <ul class="inline-flex items-center -space-x-px rounded-md border border-gray-300 bg-white">
                        <li>
                            <a class="px-3 py-2 text-sm border-r border-gray-300 @(pageIndex <= 1 ? "text-gray-300 cursor-not-allowed" : "text-gray-700 hover:bg-gray-50")"
                               href="@(pageIndex <= 1 ? "#" : BuildUrl(pageIndex - 1))"
                               aria-disabled="@(pageIndex <= 1 ? "true" : "false")" tabindex="@(pageIndex <= 1 ? "-1" : "0")">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        </li>

                        @for (int p = 1; p <= pageCount; p++)
                        {
                            var isActive = p == pageIndex;
                            <li>
                                <a href="@BuildUrl(p)"
                                   class="px-3 py-2 text-sm border-r border-gray-300 @(isActive ? "bg-blue-600 text-white" : "text-gray-700 hover:bg-gray-50")">
                                    @p
                                </a>
                            </li>
                        }

                        <li>
                            <a class="px-3 py-2 text-sm @(pageIndex >= pageCount ? "text-gray-300 cursor-not-allowed" : "text-gray-700 hover:bg-gray-50")"
                               href="@(pageIndex >= pageCount ? "#" : BuildUrl(pageIndex + 1))"
                               aria-disabled="@(pageIndex >= pageCount ? "true" : "false")" tabindex="@(pageIndex >= pageCount ? "-1" : "0")">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
        else
        {
            <div class="text-center py-12">
                <div class="mx-auto h-12 w-12 text-gray-400">
                    <i class="fas fa-tags text-4xl"></i>
                </div>
                <h3 class="mt-2 text-sm font-medium text-gray-900">Không có danh mục nào</h3>
                <p class="mt-1 text-sm text-gray-500">Bắt đầu bằng cách tạo danh mục mới.</p>
                <div class="mt-6">
                    <a href="@Url.Action("Create","Category", new { area="Admin" })" 
                       class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                        <i class="fas fa-plus mr-2"></i>
                        Thêm danh mục đầu tiên
                    </a>
                </div>
            </div>
        }
    </div>
</div>
