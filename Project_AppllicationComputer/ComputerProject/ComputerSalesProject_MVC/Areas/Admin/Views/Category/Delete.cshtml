@model ComputerSales.Application.UseCaseDTO.Category_DTO.CategoryOutput
<script src="https://cdn.tailwindcss.com"></script>
@{
    ViewData["Title"] = "Delete Category";
}

<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="mb-6">
        <h1 class="text-2xl font-semibold text-gray-900">Xoá Category</h1>
        <p class="text-sm text-gray-500 mt-1">Hành động này không thể hoàn tác.</p>
    </div>

    <div class="mb-4 rounded-md border border-rose-200 bg-rose-50 p-4 text-rose-800">
        <div class="font-medium">Bạn có chắc chắn muốn xoá mục sau?</div>
        <ul class="mt-2 list-disc pl-5 text-sm">
            <li><span class="font-medium">ID:</span> @Model.id</li>
            <li><span class="font-medium">Tên:</span> @Model.name</li>
        </ul>
    </div>

    <div class="rounded-lg border border-gray-200 bg-white divide-y divide-gray-100">
        <div class="p-4 sm:p-5 grid grid-cols-1 sm:grid-cols-3 gap-2">
            <div class="text-sm font-medium text-gray-500">ID</div>
            <div class="sm:col-span-2 text-sm text-gray-900">@Model.id</div>
        </div>
        <div class="p-4 sm:p-5 grid grid-cols-1 sm:grid-cols-3 gap-2">
            <div class="text-sm font-medium text-gray-500">Tên</div>
            <div class="sm:col-span-2 text-sm text-gray-900">@Model.name</div>
        </div>
    </div>

    <form asp-area="Admin"
          asp-controller="Category"
          asp-action="ConfirmDelete"
          asp-route-id="@Model.id"
          method="post"
          class="mt-6 flex items-center gap-3">
        @Html.AntiForgeryToken()

        <button type="submit"
                class="inline-flex items-center rounded-md bg-rose-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-rose-500 focus:outline-none focus:ring-2 focus:ring-rose-600 focus:ring-offset-2">
            Xoá
        </button>

        <a asp-area="Admin"
           asp-controller="Category"
           asp-action="Details"
           asp-route-id="@Model.id"
           class="inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50">
            Huỷ
        </a>

        <a asp-area="Admin"
           asp-controller="Category"
           asp-action="Index"
           class="ml-auto text-sm text-gray-600 hover:text-gray-900">
            ← Quay lại danh sách
        </a>
    </form>
</div>
