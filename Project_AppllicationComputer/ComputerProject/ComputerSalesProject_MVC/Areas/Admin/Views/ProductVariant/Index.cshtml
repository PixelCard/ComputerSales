@model ComputerSalesProject_MVC.Areas.Admin.Models.NewFolder.ProductVariantIndexVM

@{
    ViewData["Title"] = "Danh sách biến thể sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen bg-gradient-to-br from-purple-50 via-pink-50 to-indigo-50">
    <!-- Header Section -->
    <div class="bg-white shadow-lg border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <div class="p-3 bg-gradient-to-r from-purple-500 to-pink-600 rounded-xl shadow-lg">
                        <i class="fas fa-layer-group text-white text-2xl"></i>
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900">Danh sách biến thể sản phẩm</h1>
                        <p class="text-gray-600 mt-1">Quản lý các biến thể của sản phẩm</p>
                    </div>
                </div>
                <div class="flex items-center space-x-3">
                    <div class="bg-gradient-to-r from-purple-100 to-pink-100 px-4 py-2 rounded-lg">
                        <span class="text-purple-800 font-semibold">@(Model?.Items?.Count ?? 0) biến thể</span>
                    </div>
                    <a asp-area="Admin" asp-controller="Product" asp-action="Index"
                       class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-gray-500 to-gray-600 text-white text-sm font-medium rounded-lg hover:from-gray-600 hover:to-gray-700 transform hover:scale-105 transition-all duration-300 shadow-md hover:shadow-lg">
                        <i class="fas fa-arrow-left mr-2"></i>Quay lại sản phẩm
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Action Bar -->
        <div class="bg-white rounded-2xl shadow-xl border border-gray-100 p-6 mb-8">
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <i class="fas fa-cogs text-purple-500 text-xl mr-3"></i>
                    <h3 class="text-xl font-semibold text-gray-800">Thao tác</h3>
                </div>
                <a asp-action="Create" asp-route-productId="@Model.ProductId"
                   class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-purple-500 to-pink-600 text-white font-bold rounded-2xl hover:from-purple-600 hover:to-pink-700 transform hover:scale-110 transition-all duration-300 shadow-xl hover:shadow-2xl border-2 border-transparent hover:border-purple-300">
                    <i class="fas fa-plus text-xl mr-3"></i>
                    <span class="text-lg">Thêm biến thể mới</span>
                </a>
            </div>
        </div>

        <!-- Table Layout -->
        <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
            @if (Model?.Items != null && Model.Items.Any())
            {
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <!-- Table Header -->
                        <thead class="bg-gradient-to-r from-purple-50 to-pink-50">
                            <tr>
                                <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">
                                    <i class="fas fa-hashtag mr-2 text-purple-500"></i>ID
                                </th>
                                <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">
                                    <i class="fas fa-barcode mr-2 text-purple-500"></i>SKU
                                </th>
                                <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">
                                    <i class="fas fa-tag mr-2 text-purple-500"></i>Tên biến thể
                                </th>
                                <th class="px-6 py-4 text-center text-xs font-bold text-gray-700 uppercase tracking-wider">
                                    <i class="fas fa-toggle-on mr-2 text-purple-500"></i>Trạng thái
                                </th>
                                <th class="px-6 py-4 text-center text-xs font-bold text-gray-700 uppercase tracking-wider">
                                    <i class="fas fa-boxes mr-2 text-purple-500"></i>Số lượng
                                </th>
                                <th class="px-6 py-4 text-center text-xs font-bold text-gray-700 uppercase tracking-wider">
                                    <i class="fas fa-tools mr-2 text-purple-500"></i>Quản lý biến thể
                                </th>
                                <th class="px-6 py-4 text-center text-xs font-bold text-gray-700 uppercase tracking-wider">
                                    <i class="fas fa-cogs mr-2 text-purple-500"></i>Tùy chọn sản phẩm
                                </th>
                            </tr>
                        </thead>
                        
                        <!-- Table Body -->
                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var item in Model.Items)
                            {
                                <tr class="hover:bg-gray-50 transition-colors duration-200">
                                    <!-- ID Column -->
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="w-10 h-10 bg-gradient-to-r from-purple-500 to-pink-600 rounded-lg flex items-center justify-center shadow-md">
                                                <span class="text-white font-bold text-sm">@item.Id</span>
                                            </div>
                                        </div>
                                    </td>
                                    
                                    <!-- SKU Column -->
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm font-medium text-gray-900">@item.SKU</div>
                                    </td>
                                    
                                    <!-- Variant Name Column -->
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm font-semibold text-gray-900">@item.VariantName</div>
                                    </td>
                                    
                                    <!-- Status Column -->
                                    <td class="px-6 py-4 whitespace-nowrap text-center">
                                        @if (item.Status == ComputerSales.Domain.Entity.EProduct.VariantStatus.Active)
                                        {
                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                <i class="fas fa-check-circle mr-1"></i>Active
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                                <i class="fas fa-times-circle mr-1"></i>Inactive
                                            </span>
                                        }
                                    </td>
                                    
                                    <!-- Quantity Column -->
                                    <td class="px-6 py-4 whitespace-nowrap text-center">
                                        <div class="text-lg font-bold text-gray-900">@item.Quantity</div>
                                    </td>
                                    
                                    <!-- Management Actions Column -->
                                    <td class="px-6 py-4 whitespace-nowrap text-center">
                                        <div class="flex gap-2 justify-center">
                                            <a asp-action="UpdateProductVariant" asp-route-id="@item.Id"
                                               class="inline-flex items-center px-3 py-2 bg-gradient-to-r from-yellow-500 to-orange-600 text-white text-xs font-medium rounded-lg hover:from-yellow-600 hover:to-orange-700 transform hover:scale-105 transition-all duration-300"
                                               title="Chỉnh sửa biến thể">
                                                <i class="fas fa-edit mr-1"></i>Sửa
                                            </a>

                                            <a asp-action="DeleteProductVariant" asp-route-id="@item.Id"
                                               class="inline-flex items-center px-3 py-2 bg-gradient-to-r from-red-500 to-pink-600 text-white text-xs font-medium rounded-lg hover:from-red-600 hover:to-pink-700 transform hover:scale-105 transition-all duration-300"
                                               onclick="return confirm('Bạn có chắc chắn muốn xóa biến thể này?');"
                                               title="Xóa biến thể">
                                                <i class="fas fa-trash mr-1"></i>Xóa
                                            </a>
                                        </div>
                                    </td>
                                    
                                    <!-- Product Options Column -->
                                    <td class="px-6 py-4 whitespace-nowrap text-center">
                                        <div class="flex gap-2 justify-center">
                                            <a asp-area="Admin" asp-controller="VariantOption" asp-action="Index" asp-route-variantId="@item.Id"
                                               class="inline-flex items-center px-3 py-2 bg-gradient-to-r from-blue-500 to-indigo-600 text-white text-xs font-medium rounded-lg hover:from-blue-600 hover:to-indigo-700 transform hover:scale-105 transition-all duration-300"
                                               title="Xem tùy chọn">
                                                <i class="fas fa-cogs mr-1"></i>Option
                                            </a>

                                            <a asp-area="Admin" asp-controller="VariantImage" asp-action="IndexVariantImage" asp-route-variantId="@item.Id"
                                               class="inline-flex items-center px-3 py-2 bg-gradient-to-r from-green-500 to-teal-600 text-white text-xs font-medium rounded-lg hover:from-green-600 hover:to-teal-700 transform hover:scale-105 transition-all duration-300"
                                               title="Xem hình ảnh">
                                                <i class="fas fa-images mr-1"></i>Ảnh
                                            </a>

                                            <a asp-area="Admin" asp-controller="VariantPrice" asp-action="IndexVariantPrice" asp-route-variantId="@item.Id"
                                               class="inline-flex items-center px-3 py-2 bg-gradient-to-r from-purple-500 to-pink-600 text-white text-xs font-medium rounded-lg hover:from-purple-600 hover:to-pink-700 transform hover:scale-105 transition-all duration-300"
                                               title="Xem giá">
                                                <i class="fas fa-dollar-sign mr-1"></i>Giá
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="p-12 text-center">
                    <div class="flex flex-col items-center">
                        <div class="w-20 h-20 bg-gradient-to-r from-purple-100 to-pink-100 rounded-full flex items-center justify-center mb-6">
                            <i class="fas fa-layer-group text-purple-500 text-3xl"></i>
                        </div>
                        <h3 class="text-2xl font-bold text-gray-900 mb-3">Không có biến thể nào</h3>
                        <p class="text-gray-500 mb-6 text-lg">Hãy thêm biến thể đầu tiên cho sản phẩm này</p>
                        <a asp-action="Create" asp-route-productId="@Model.ProductId"
                           class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-purple-500 to-pink-600 text-white font-semibold rounded-xl hover:from-purple-600 hover:to-pink-700 transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl">
                            <i class="fas fa-plus mr-3"></i>Thêm biến thể đầu tiên
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
