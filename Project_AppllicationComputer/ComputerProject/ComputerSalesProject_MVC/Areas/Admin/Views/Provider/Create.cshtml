@model ComputerSales.Application.UseCaseDTO.Provider_DTO.ProviderInput
<script src="https://cdn.tailwindcss.com"></script>

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-white to-slate-100 py-12 px-4 flex items-start justify-center relative">
    <div class="pointer-events-none absolute inset-0 [background:radial-gradient(420px_180px_at_10%_0%,rgba(99,102,241,0.08),transparent_60%),radial-gradient(520px_220px_at_100%_12%,rgba(16,185,129,0.08),transparent_60%)]"></div>
    <div class="relative w-full max-w-lg bg-white/90 backdrop-blur rounded-2xl shadow-xl ring-1 ring-gray-200">
        <div class="p-4 sm:p-6 border-b border-gray-100 flex items-center justify-between">
            <div class="flex items-center gap-3">
                <div class="h-8 w-8 rounded-lg bg-gradient-to-tr from-indigo-500 to-emerald-500"></div>
                <h1 class="text-xl font-semibold text-gray-900">Thêm nhà cung cấp</h1>
            </div>
            <a href="@Url.Action("Index")" class="inline-flex items-center rounded-md border border-gray-300 bg-white px-3 py-1.5 text-sm text-gray-700 hover:bg-gray-50">Danh sách</a>
        </div>
        <div class="h-1 bg-gradient-to-r from-indigo-500 via-transparent to-emerald-500 opacity-30"></div>
        <form method="post" class="p-4 sm:p-6">
            <div class="mb-5">
                <label class="block text-sm font-medium text-gray-700 mb-1">Tên nhà cung cấp</label>
                <input asp-for="ProviderName" class="w-full rounded-md border border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2" />
                <span asp-validation-for="ProviderName" class="mt-1 block text-sm text-rose-600"></span>
            </div>
            <div class="flex items-center justify-end gap-2">
                <a href="@Url.Action("Index")" class="inline-flex items-center rounded-md border border-gray-300 bg-white px-3 py-1.5 text-sm text-gray-700 hover:bg-gray-50">Hủy</a>
                <button class="inline-flex items-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-medium text-white shadow hover:bg-indigo-700">Lưu</button>
            </div>
        </form>
    </div>
</div>


