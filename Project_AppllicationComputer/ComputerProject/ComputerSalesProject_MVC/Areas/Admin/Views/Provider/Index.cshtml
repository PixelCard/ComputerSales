@model List<ComputerSales.Application.UseCaseDTO.Provider_DTO.ProviderOutput>
<script src="https://cdn.tailwindcss.com"></script>

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-white to-slate-100 py-12 px-4 flex items-start justify-center relative">
    <div class="pointer-events-none absolute inset-0 [background:radial-gradient(520px_220px_at_15%_0%,rgba(99,102,241,0.08),transparent_60%),radial-gradient(620px_260px_at_100%_12%,rgba(16,185,129,0.08),transparent_60%)]"></div>
<div class="relative w-full max-w-4xl bg-white/90 backdrop-blur rounded-2xl shadow-xl ring-1 ring-gray-200">
        <div class="p-4 sm:p-6 border-b border-gray-100 flex items-center justify-between">
            <div class="flex items-center gap-3">
                <div class="h-8 w-8 rounded-lg bg-gradient-to-tr from-indigo-500 to-emerald-500"></div>
                <h1 class="text-lg md:text-xl font-semibold text-gray-900">Nhà cung cấp</h1>
            </div>
            <a href="@Url.Action("Create")" class="inline-flex items-center gap-2 rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-medium text-white shadow hover:bg-indigo-700">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4"><path d="M10 3a1 1 0 0 1 1 1v5h5a1 1 0 1 1 0 2h-5v5a1 1 0 1 1-2 0v-5H4a1 1 0 1 1 0-2h5V4a1 1 0 0 1 1-1Z"/></svg>
                Thêm
            </a>
        </div>
        <div class="h-1 bg-gradient-to-r from-indigo-500 via-transparent to-emerald-500 opacity-30"></div>
        <div class="p-4 sm:p-6">
            <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-4 py-2 text-left text-xs font-semibold text-gray-600">ID</th>
                        <th class="px-4 py-2 text-left text-xs font-semibold text-gray-600">Tên NCC</th>
                        <th class="px-4 py-2 text-right text-xs font-semibold text-gray-600">Hành động</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100 bg-white">
                    @foreach (var p in Model)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="px-4 py-2 text-base md:text-sm text-gray-700">@p.ProviderID</td>
                            <td class="px-4 py-2 text-base md:text-sm text-gray-900">
                                <span class="inline-flex items-center gap-2">
                                    <span class="h-2 w-2 rounded-full bg-indigo-500"></span>
                                    @p.ProviderName
                                </span>
                            </td>
                            <td class="px-4 py-2 whitespace-nowrap">
                                <div class="flex justify-end gap-2 flex-wrap">
                                    <a href="@Url.Action("Edit", new { id = p.ProviderID })" class="inline-flex items-center gap-1 rounded-md border border-gray-300 bg-white px-3 py-2 text-sm md:text-[13px] font-medium text-gray-700 shadow-sm hover:bg-gray-50">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4"><path d="M12.316 3.051a1.5 1.5 0 0 1 2.122 0l2.511 2.511a1.5 1.5 0 0 1 0 2.122l-7.15 7.15a2 2 0 0 1-.894.516l-3.3.943a.75.75 0 0 1-.927-.927l.943-3.3a2 2 0 0 1 .516-.894l7.179-7.12Z"/></svg>
                                        Sửa
                                    </a>
                                    <form method="post" action="@Url.Action("Delete")" onsubmit="return confirm('Xóa nhà cung cấp này?');">
                                        <input type="hidden" name="id" value="@p.ProviderID" />
                                        <button class="inline-flex items-center gap-1 rounded-md bg-rose-600 px-3 py-2 text-sm md:text-[13px] font-medium text-white shadow hover:bg-rose-700">
                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4"><path fill-rule="evenodd" d="M9 2a1 1 0 0 0-.894.553L7.382 4H4a1 1 0 1 0 0 2h12a1 1 0 1 0 0-2h-3.382l-.724-1.447A1 1 0 0 0 11 2H9Zm-3 6a1 1 0 0 1 1 1v6a1 1 0 1 1-2 0V9a1 1 0 0 1 1-1Zm4 0a1 1 0 0 1 1 1v6a1 1 0 1 1-2 0V9a1 1 0 0 1 1-1Zm5 1a1 1 0 0 0-2 0v6a1 1 0 1 0 2 0V9Z" clip-rule="evenodd"/></svg>
                                            Xóa
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
    </div>
</div>


