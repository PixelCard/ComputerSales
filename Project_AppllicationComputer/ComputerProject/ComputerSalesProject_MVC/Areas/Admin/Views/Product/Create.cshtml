@model ComputerSales.Application.UseCaseDTO.Product_DTO.ProductDTOInput

@{
    ViewData["Title"] = "Tạo sản phẩm mới";
}

<div class="max-w-3xl mx-auto p-6 bg-white shadow-lg rounded-2xl">
    <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">@ViewData["Title"]</h2>

    <form asp-action="Create" method="post" class="space-y-6">
        <!-- SKU -->
        <div>
            <label asp-for="SKU" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="SKU" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" placeholder="Nhập mã sản phẩm (ví dụ: SP001)" />
            <span class="text-xs text-gray-500">Mã sản phẩm duy nhất để quản lý.</span>
            <span asp-validation-for="SKU" class="text-red-500 text-sm"></span>
        </div>

        <!-- Slug -->
        <div>
            <label asp-for="Slug" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="Slug" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:outline-none" placeholder="ví dụ: laptop-asus-rog" />
            <span class="text-xs text-gray-500">Đường dẫn SEO-friendly, không dấu, nối bằng dấu "-".</span>
            <span asp-validation-for="Slug" class="text-red-500 text-sm"></span>
        </div>

        <!-- ShortDescription -->
        <div>
            <label asp-for="ShortDescription" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <textarea asp-for="ShortDescription" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:outline-none" placeholder="Mô tả ngắn gọn sản phẩm..."></textarea>
            <span class="text-xs text-gray-500">Mô tả tóm tắt hiển thị trong danh sách sản phẩm.</span>
            <span asp-validation-for="ShortDescription" class="text-red-500 text-sm"></span>
        </div>

        <!-- Status -->
        <div>
            <label asp-for="Status" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <select asp-for="Status" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none">
                <option value="1">Active - Đang kinh doanh</option>
                <option value="0">Inactive - Ngưng kinh doanh</option>
            </select>
            <span class="text-xs text-gray-500">Trạng thái hiện tại của sản phẩm.</span>
            <span asp-validation-for="Status" class="text-red-500 text-sm"></span>
        </div>

        <!-- AccessoriesID -->
        <div>
            <label asp-for="AccessoriesID" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="AccessoriesID" type="number" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:outline-none" placeholder="Nhập ID phụ kiện liên quan" />
            <span class="text-xs text-gray-500">Mã phụ kiện đi kèm (nếu có).</span>
            <span asp-validation-for="AccessoriesID" class="text-red-500 text-sm"></span>
        </div>

        <!-- ProviderID -->
        <div>
            <label asp-for="ProviderID" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="ProviderID" type="number" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:outline-none" placeholder="Nhập ID nhà cung cấp" />
            <span class="text-xs text-gray-500">Mã nhà cung cấp trong hệ thống.</span>
            <span asp-validation-for="ProviderID" class="text-red-500 text-sm"></span>
        </div>

        <!-- Buttons -->
        <div class="flex justify-end space-x-4 pt-4">
            <a asp-action="Index" class="px-5 py-2 rounded-lg bg-gray-200 hover:bg-gray-300 text-gray-700 transition">Quay lại</a>
            <button type="submit" class="px-5 py-2 rounded-lg bg-blue-600 hover:bg-blue-700 text-white font-semibold shadow-md transition">Lưu sản phẩm</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Highlight input khi nhập sai
        document.querySelectorAll("input, textarea, select").forEach(el => {
            el.addEventListener("invalid", function () {
                this.classList.add("border-red-500", "bg-red-50");
            });
            el.addEventListener("input", function () {
                this.classList.remove("border-red-500", "bg-red-50");
            });
        });
    </script>
}
