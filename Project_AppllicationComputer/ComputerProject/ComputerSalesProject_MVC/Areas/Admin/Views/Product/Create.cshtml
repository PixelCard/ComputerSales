@model ComputerSales.Application.UseCaseDTO.Product_DTO.ProductDTOInput

<form asp-action="Create" method="post">
    <div>
        <label>SKU</label>
        <input asp-for="SKU" class="form-control" />
        <span asp-validation-for="SKU" class="text-danger"></span>
    </div>
    <div>
        <label>Slug</label>
        <input asp-for="Slug" class="form-control" />
        <span asp-validation-for="Slug" class="text-danger"></span>
    </div>
    <div>
        <label>Mô tả ngắn</label>
        <textarea asp-for="ShortDescription" class="form-control"></textarea>
        <span asp-validation-for="ShortDescription" class="text-danger"></span>
    </div>
    <select asp-for="Status" asp-items="ViewBag.StatusList" class="form-select">
        <option value="">-- Chọn Trạng thái --</option>
    </select>

    <select asp-for="AccessoriesID" asp-items="ViewBag.AccessoriesList" class="form-select">
        <option value="">-- Chọn Accessories --</option>
    </select>

    <select asp-for="ProviderID" asp-items="ViewBag.ProviderList" class="form-select">
        <option value="">-- Chọn Provider --</option>
    </select>

    <button type="submit" class="btn btn-primary">Tạo</button>
</form>
