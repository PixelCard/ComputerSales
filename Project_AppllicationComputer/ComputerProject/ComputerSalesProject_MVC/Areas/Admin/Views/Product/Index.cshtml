@using ComputerSales.Application.UseCaseDTO.Account_DTO
@model IEnumerable<AccountOutputDTO>

@{
    ViewData["Title"] = "Tài khoản";
}

<div class="flex items-center justify-between mb-4">
    <h1 class="text-2xl font-semibold">Danh sách tài khoản</h1>
    <a class="px-4 py-2 rounded-xl bg-blue-600 text-white" asp-action="Create">Tạo mới</a>
</div>

<div class="overflow-x-auto bg-white rounded-2xl shadow">
    <table class="min-w-full text-sm">
        <thead>
            <tr class="border-b bg-gray-50">
                <th class="text-left p-3">ID</th>
                <th class="text-left p-3">Email</th>
                <th class="text-left p-3">Role ID</th>
                <th class="text-left p-3">Tên role</th>
                <th class="text-right p-3">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var x in Model)
                {
                    <tr class="border-b">
                        <td class="p-3">@x.IDAccount</td>
                        <td class="p-3">@x.Email</td>
                        <td class="p-3">@x.IDRole</td>
                        <td class="p-3">@x.TenRole</td>
                        <td class="p-3 text-right whitespace-nowrap">
                            <a class="text-blue-600 hover:underline" asp-action="Details" asp-route-id="@x.IDAccount">Xem</a>
                            <span class="mx-2">|</span>
                            <a class="hover:underline" asp-action="Edit" asp-route-id="@x.IDAccount">Sửa</a>
                            <span class="mx-2">|</span>
                            <a class="text-red-600 hover:underline" asp-action="Delete" asp-route-id="@x.IDAccount">Xóa</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td class="p-4 text-center text-gray-500" colspan="5">Chưa có tài khoản.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
