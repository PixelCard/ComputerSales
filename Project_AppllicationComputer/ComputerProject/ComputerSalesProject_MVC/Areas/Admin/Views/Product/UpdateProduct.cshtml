@model ComputerSales.Application.UseCaseDTO.Product_DTO.ProductDTOInput

@{
    ViewData["Title"] = "Cập nhật sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-3xl mx-auto py-8">
    <div class="bg-white shadow rounded-xl p-6">
        <h1 class="text-2xl font-bold text-gray-900 mb-6">Cập nhật sản phẩm</h1>

        <form asp-action="UpdateProduct" asp-route-id="@ViewBag.ProductId" method="post">
            <div class="space-y-4">
                <div>
                    <label class="font-semibold text-gray-700">Tên sản phẩm</label>
                    <input asp-for="ShortDescription" class="form-input w-full border rounded-lg p-2" />
                    <span asp-validation-for="ShortDescription" class="text-red-500"></span>
                </div>

                <div>
                    <label class="font-semibold text-gray-700">SKU</label>
                    <input asp-for="SKU" class="form-input w-full border rounded-lg p-2" />
                </div>

                <div>
                    <label class="font-semibold text-gray-700">Slug</label>
                    <input asp-for="Slug" class="form-input w-full border rounded-lg p-2" />
                </div>

                <div>
                    <label class="font-semibold text-gray-700">Nhà cung cấp</label>
                    <select asp-for="ProviderID" asp-items="ViewBag.ProviderList" class="form-select w-full border rounded-lg p-2"></select>
                </div>

                <div>
                    <label class="font-semibold text-gray-700">Phụ kiện</label>
                    <select asp-for="AccessoriesID" asp-items="ViewBag.AccessoriesList" class="form-select w-full border rounded-lg p-2"></select>
                </div>

                <div>
                    <label class="font-semibold text-gray-700">Trạng thái</label>
                    <select asp-for="Status" asp-items="ViewBag.StatusList" class="form-select w-full border rounded-lg p-2"></select>
                </div>
            </div>

            <div class="mt-6">
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                    Lưu thay đổi
                </button>
                <a asp-area="Admin"
                   asp-controller="Product"
                   asp-action="ProductDetails"
                   asp-route-id="@ViewBag.ProductId"
                   class="ml-2 px-4 py-2 bg-gray-200 rounded-lg hover:bg-gray-300">
                    Hủy
                </a>

            </div>
        </form>
    </div>
</div>
