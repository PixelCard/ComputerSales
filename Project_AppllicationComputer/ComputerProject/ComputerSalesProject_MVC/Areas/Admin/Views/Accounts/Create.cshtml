@model ComputerSalesProject_MVC.Areas.Admin.Models.AccountVM.AccountCreateVM
@{
    ViewData["Title"] = "Tạo tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-2xl mx-auto px-4">
        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Tạo tài khoản mới</h1>
            <p class="text-gray-600">Điền thông tin để tạo tài khoản người dùng</p>
        </div>

        <!-- Form Card -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
            <div class="px-8 py-8">
                <form asp-area="Admin" asp-controller="Accounts" asp-action="Create" method="post" class="space-y-6">
                    @Html.AntiForgeryToken()

                    <!-- Validation Summary -->
                    <div asp-validation-summary="ModelOnly"
                        class="bg-red-50 border border-red-200 rounded-lg p-4 text-red-700 text-sm"></div>

                    <!-- Email Field -->
                    <div class="space-y-2">
                        <label asp-for="Email" class="block text-sm font-semibold text-gray-700">

                            Email
                        </label>
                        <input asp-for="Email"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                            placeholder="Nhập địa chỉ email" />
                        <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
                    </div>

                    <!-- Password Field -->
                    <div class="space-y-2">
                        <label asp-for="Pass" class="block text-sm font-semibold text-gray-700">

                            Mật khẩu
                        </label>
                        <input asp-for="Pass" type="password"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                            placeholder="Nhập mật khẩu" />
                        <span asp-validation-for="Pass" class="text-red-600 text-sm"></span>
                    </div>

                    <!-- Role Field -->
                    <div class="space-y-2">
                        <label asp-for="IDRole" class="block text-sm font-semibold text-gray-700">
                            <i class="fas fa-user-tag text-gray-400 mr-2"></i>
                            Vai trò
                        </label>
                        <select asp-for="IDRole" asp-items="ViewBag.Roles"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors bg-white">
                            <option value="">-- Chọn vai trò --</option>
                        </select>
                        <span asp-validation-for="IDRole" class="text-red-600 text-sm"></span>
                    </div>

                    <!-- Create Date Field -->
                    <div class="space-y-2">
                        <label asp-for="CreateDate" class="block text-sm font-semibold text-gray-700">
                            <i class="fas fa-calendar text-gray-400 mr-2"></i>
                            Ngày tạo
                        </label>
                        <input asp-for="CreateDate" type="date"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" />
                        <span asp-validation-for="CreateDate" class="text-red-600 text-sm"></span>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex flex-col sm:flex-row gap-4 pt-6">
                        <button type="submit"
                            class="flex-1 bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors duration-200 flex items-center justify-center">
                            <i class="fas fa-plus mr-2"></i>
                            Tạo tài khoản
                        </button>
                        <a asp-area="Admin" asp-controller="Accounts" asp-action="Index"
                            class="flex-1 bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold py-3 px-6 rounded-lg transition-colors duration-200 flex items-center justify-center text-decoration-none">
                            <i class="fas fa-arrow-left mr-2"></i>
                            Quay lại
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Additional Info -->
        <div class="mt-6 text-center">
            <p class="text-sm text-gray-500">
                <i class="fas fa-info-circle mr-1"></i>
                Tất cả các trường đều bắt buộc phải điền
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <style>
        /* Custom validation message styling */
        .field-validation-error {
            display: block !important;
            color: #dc2626 !important;
            font-size: 0.875rem !important;
            margin-top: 0.5rem !important;
        }

        .field-validation-error:before {
            content: "⚠ ";
            margin-right: 0.25rem;
        }

        .input-validation-error {
            border-color: #dc2626 !important;
            box-shadow: 0 0 0 1px #dc2626 !important;
        }

        .validation-summary-errors {
            background-color: #fef2f2 !important;
            border: 1px solid #fecaca !important;
            border-radius: 0.5rem !important;
            padding: 1rem !important;
            color: #991b1b !important;
            font-size: 0.875rem !important;
        }

        .validation-summary-errors ul {
            margin: 0 !important;
            padding-left: 1.25rem !important;
        }

        .validation-summary-errors li {
            margin-bottom: 0.25rem !important;
        }
    </style>

    <script>
        // Auto-set today's date if CreateDate is empty
        document.addEventListener('DOMContentLoaded', function () {
            const createDateInput = document.querySelector('input[name="CreateDate"]');
            if (createDateInput && !createDateInput.value) {
                const today = new Date().toISOString().split('T')[0];
                createDateInput.value = today;
            }
        });
    </script>
}