@model ComputerSalesProject_MVC.Areas.Admin.Models.AccountVM.AccountCreateVM
@{
    ViewData["Title"] = "Tạo tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="relative min-h-screen w-full overflow-hidden">
    <!-- Animated Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-blue-900 via-indigo-900 to-purple-900"></div>
    <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width=" 60" height="60" viewBox="0 0 60 60"
        xmlns="http://www.w3.org/2000/svg" %3E%3Cg fill="none" fill-rule="evenodd" %3E%3Cg fill="%239C92AC"
        fill-opacity="0.1" %3E%3Ccircle cx="30" cy="30" r="2" /%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] opacity-20"></div>

    <!-- Floating Orbs -->
    <div
        class="absolute top-20 left-10 w-72 h-72 bg-gradient-to-r from-blue-400 to-cyan-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-pulse">
    </div>
    <div
        class="absolute top-40 right-10 w-72 h-72 bg-gradient-to-r from-purple-400 to-pink-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-pulse delay-1000">
    </div>
    <div
        class="absolute -bottom-8 left-20 w-72 h-72 bg-gradient-to-r from-cyan-400 to-blue-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-pulse delay-500">
    </div>

    <div class="relative z-10 py-8 px-4 w-full">
        <div class="w-full px-4 py-4">
            <!-- Header Section -->
            <div class="relative mb-8">
                <div
                    class="relative p-8 bg-white/10 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/20 overflow-hidden">
                    <div
                        class="absolute inset-0 bg-gradient-to-r from-cyan-500 via-blue-500 to-purple-500 rounded-3xl opacity-75">
                    </div>
                    <div
                        class="absolute inset-[1px] bg-gradient-to-br from-blue-900 via-indigo-900 to-purple-900 rounded-3xl">
                    </div>

                    <div class="relative z-10 text-center">
                        <div
                            class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-r from-cyan-400 via-blue-500 to-purple-600 rounded-2xl mb-6 shadow-2xl transform rotate-3 hover:rotate-0 transition-transform duration-300">
                            <i class="fa-solid fa-user-plus text-white text-3xl"></i>
                        </div>
                        <h1
                            class="text-4xl font-black bg-gradient-to-r from-cyan-400 via-blue-500 to-purple-600 bg-clip-text text-transparent mb-4">
                            Tạo tài khoản mới
                        </h1>
                        <p class="text-white/80 text-lg font-medium">Thêm tài khoản người dùng vào hệ thống</p>
                    </div>
                </div>
            </div>

            <!-- Form Card -->
            <div class="relative">
                <div
                    class="relative bg-white/10 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/20 overflow-hidden">
                    <div
                        class="absolute inset-0 bg-gradient-to-r from-cyan-500 via-blue-500 to-purple-500 rounded-3xl opacity-75">
                    </div>
                    <div
                        class="absolute inset-[1px] bg-gradient-to-br from-blue-900 via-indigo-900 to-purple-900 rounded-3xl">
                    </div>

                    <div class="relative z-10 p-8">
                        <form asp-action="Create" method="post" class="space-y-6">
                            @Html.AntiForgeryToken()

                            <!-- Email Field -->
                            <div class="space-y-3">
                                <label asp-for="Email" class="flex items-center text-sm font-bold text-cyan-300">
                                    <i class="fa-solid fa-envelope mr-3 text-cyan-400 text-lg"></i>
                                    Email
                                </label>
                                <div class="relative">
                                    <input asp-for="Email"
                                        class="w-full px-6 py-4 border-2 border-cyan-400/30 bg-white/20 backdrop-blur-sm rounded-2xl focus:ring-4 focus:ring-cyan-400/50 focus:border-cyan-400 transition-all duration-300 text-white placeholder:text-white/60 text-lg font-medium"
                                        placeholder="Nhập địa chỉ email" />
                                    <div class="absolute inset-y-0 right-0 flex items-center pr-4">
                                        <i class="fa-solid fa-envelope text-cyan-400 text-lg"></i>
                                    </div>
                                </div>
                                <span asp-validation-for="Email" class="text-red-400 text-sm flex items-center">
                                    <i class="fa-solid fa-exclamation-triangle mr-2"></i>
                                    <span asp-validation-for="Email"></span>
                                </span>
                            </div>

                            <!-- Password Field -->
                            <div class="space-y-3">
                                <label asp-for="Pass" class="flex items-center text-sm font-bold text-purple-300">
                                    <i class="fa-solid fa-lock mr-3 text-purple-400 text-lg"></i>
                                    Mật khẩu
                                </label>
                                <div class="relative">
                                    <input asp-for="Pass" type="password"
                                        class="w-full px-6 py-4 border-2 border-purple-400/30 bg-white/20 backdrop-blur-sm rounded-2xl focus:ring-4 focus:ring-purple-400/50 focus:border-purple-400 transition-all duration-300 text-white placeholder:text-white/60 text-lg font-medium"
                                        placeholder="Nhập mật khẩu" />
                                    <div class="absolute inset-y-0 right-0 flex items-center pr-4">
                                        <i class="fa-solid fa-lock text-purple-400 text-lg"></i>
                                    </div>
                                </div>
                                <span asp-validation-for="Pass" class="text-red-400 text-sm flex items-center">
                                    <i class="fa-solid fa-exclamation-triangle mr-2"></i>
                                    <span asp-validation-for="Pass"></span>
                                </span>
                            </div>

                            <!-- Role ID Field -->
                            <div class="space-y-3">
                                <label asp-for="IDRole" class="flex items-center text-sm font-bold text-indigo-300">
                                    <i class="fa-solid fa-key mr-3 text-indigo-400 text-lg"></i>
                                    Role ID
                                </label>
                                <div class="relative">
                                    <input asp-for="IDRole"
                                        class="w-full px-6 py-4 border-2 border-indigo-400/30 bg-white/20 backdrop-blur-sm rounded-2xl focus:ring-4 focus:ring-indigo-400/50 focus:border-indigo-400 transition-all duration-300 text-white placeholder:text-white/60 text-lg font-medium"
                                        placeholder="Nhập ID vai trò" />
                                    <div class="absolute inset-y-0 right-0 flex items-center pr-4">
                                        <i class="fa-solid fa-key text-indigo-400 text-lg"></i>
                                    </div>
                                </div>
                                <span asp-validation-for="IDRole" class="text-red-400 text-sm flex items-center">
                                    <i class="fa-solid fa-exclamation-triangle mr-2"></i>
                                    <span asp-validation-for="IDRole"></span>
                                </span>
                            </div>

                            <!-- Create Date Field -->
                            <div class="space-y-3">
                                <label asp-for="CreateDate" class="flex items-center text-sm font-bold text-cyan-300">
                                    <i class="fa-solid fa-calendar mr-3 text-cyan-400 text-lg"></i>
                                    Ngày tạo
                                </label>
                                <div class="relative">
                                    <input asp-for="CreateDate" type="date"
                                        class="w-full px-6 py-4 border-2 border-cyan-400/30 bg-white/20 backdrop-blur-sm rounded-2xl focus:ring-4 focus:ring-cyan-400/50 focus:border-cyan-400 transition-all duration-300 text-white placeholder:text-white/60 text-lg font-medium" />
                                    <div class="absolute inset-y-0 right-0 flex items-center pr-4">
                                        <i class="fa-solid fa-calendar text-cyan-400 text-lg"></i>
                                    </div>
                                </div>
                                <span asp-validation-for="CreateDate" class="text-red-400 text-sm flex items-center">
                                    <i class="fa-solid fa-exclamation-triangle mr-2"></i>
                                    <span asp-validation-for="CreateDate"></span>
                                </span>
                            </div>

                            <!-- Action Buttons -->
                            <div class="flex items-center justify-center gap-6 pt-8">
                                <button type="submit"
                                    class="group relative px-10 py-4 bg-gradient-to-r from-cyan-500 via-blue-500 to-purple-600 text-white font-bold rounded-2xl shadow-2xl hover:shadow-cyan-500/25 transform hover:-translate-y-1 transition-all duration-300 focus:outline-none focus:ring-4 focus:ring-cyan-300 overflow-hidden">
                                    <div
                                        class="absolute inset-0 bg-gradient-to-r from-purple-600 via-pink-500 to-red-500 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                                    </div>
                                    <span class="relative flex items-center text-lg">
                                        <i class="fa-solid fa-check mr-3 text-xl"></i>
                                        Tạo tài khoản
                                    </span>
                                </button>
                                <a asp-action="Index"
                                    class="group relative px-10 py-4 bg-white/20 backdrop-blur-sm text-white font-bold rounded-2xl border-2 border-white/30 hover:bg-white/30 hover:border-white/50 transform hover:-translate-y-1 transition-all duration-300 focus:outline-none focus:ring-4 focus:ring-white/20">
                                    <span class="flex items-center text-lg">
                                        <i class="fa-solid fa-arrow-left mr-3 text-xl"></i>
                                        Quay lại
                                    </span>
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
