@using ComputerSales.Application.UseCaseDTO.Account_DTO
@model IEnumerable<AccountOutputDTO>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@{
    ViewData["Title"] = "Tài khoản";
    var total = Model?.Count() ?? 0;

    string RoleChipClass(string roleName)
    {
        roleName = roleName?.Trim()?.ToLowerInvariant() ?? "";
        return roleName switch
        {
            "admin" or "quản trị" => "bg-red-50 text-red-700 ring-1 ring-red-200",
            "manager" or "quản lý" => "bg-amber-50 text-amber-700 ring-1 ring-amber-200",
            "staff" or "nhân viên" => "bg-blue-50 text-blue-700 ring-1 ring-blue-200",
            "customer" or "khách hàng" => "bg-emerald-50 text-emerald-700 ring-1 ring-emerald-200",
            _ => "bg-slate-50 text-slate-700 ring-1 ring-slate-200"
        };
    }

    var q = Context.Request.Query["q"].ToString();
    var roleFilter = Context.Request.Query["role"].ToString();
    var roles = ViewBag.Roles as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>();
}

<div class="relative min-h-screen overflow-hidden">
    <!-- Animated Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-blue-900 via-indigo-900 to-purple-900"></div>
    <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width=" 60" height="60" viewBox="0 0 60 60"
        xmlns="http://www.w3.org/2000/svg" %3E%3Cg fill="none" fill-rule="evenodd" %3E%3Cg fill="%239C92AC"
        fill-opacity="0.1" %3E%3Ccircle cx="30" cy="30" r="2" /%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] opacity-20"></div>

    <!-- Floating Orbs -->
    <div
        class="absolute top-20 left-10 w-72 h-72 bg-gradient-to-r from-blue-400 to-cyan-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-pulse">
    </div>
    <div
        class="absolute top-40 right-10 w-72 h-72 bg-gradient-to-r from-purple-400 to-pink-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-pulse delay-1000">
    </div>
    <div
        class="absolute -bottom-8 left-20 w-72 h-72 bg-gradient-to-r from-cyan-400 to-blue-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-pulse delay-500">
    </div>

    <div class="relative z-10 py-8 px-4 w-full">
        <div class="w-full px-4 py-4">
        <!-- Header Section -->
            <div class="relative mb-8">
                <!-- Glass morphism card -->
                <div
                    class="relative p-8 bg-white/10 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/20 overflow-hidden">
                    <!-- Animated gradient border -->
                    <div
                        class="absolute inset-0 bg-gradient-to-r from-pink-500 via-purple-500 to-indigo-500 rounded-3xl opacity-75">
                    </div>
                    <div
                        class="absolute inset-[1px] bg-gradient-to-br from-indigo-900 via-purple-900 to-pink-900 rounded-3xl">
                    </div>

                    <div class="relative z-10 flex items-center justify-between">
                        <div class="flex items-center space-x-6">
                            <!-- Animated icon -->
                            <div class="relative">
                                <div
                                    class="w-16 h-16 bg-gradient-to-r from-cyan-400 via-blue-500 to-purple-600 rounded-2xl flex items-center justify-center shadow-2xl transform rotate-3 hover:rotate-0 transition-transform duration-300">
                                    <i class="fa-solid fa-users text-white text-2xl"></i>
                                </div>
                                <div
                                    class="absolute -top-1 -right-1 w-6 h-6 bg-gradient-to-r from-yellow-400 to-orange-500 rounded-full flex items-center justify-center animate-bounce">
                                    <span class="text-white text-xs font-bold">@total</span>
                                </div>
                </div>
                <div>
                                <h1
                                    class="text-4xl font-black bg-gradient-to-r from-cyan-400 via-blue-500 to-purple-600 bg-clip-text text-transparent mb-2">
                        Quản lý tài khoản
                    </h1>
                                <p class="text-white/80 text-lg font-medium">Danh sách tài khoản trong hệ thống</p>
                            </div>
                        </div>
                        <div class="flex items-center space-x-4">
                            <!-- Stats card -->
                            <div
                                class="bg-gradient-to-r from-emerald-400/20 to-teal-400/20 backdrop-blur-sm rounded-2xl px-8 py-4 border border-emerald-400/30">
                                <div class="text-center">
                                    <div class="text-3xl font-bold text-emerald-300">@total</div>
                                    <div class="text-emerald-200 text-sm font-medium">Tài khoản</div>
                                </div>
                            </div>
                            <!-- Create button -->
                            <a asp-action="Create"
                                class="group relative px-8 py-4 bg-gradient-to-r from-cyan-500 via-blue-500 to-purple-600 text-white font-bold rounded-2xl shadow-2xl hover:shadow-cyan-500/25 transform hover:-translate-y-1 transition-all duration-300 overflow-hidden">
                                <div
                                    class="absolute inset-0 bg-gradient-to-r from-purple-600 via-pink-500 to-red-500 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                                </div>
                                <span class="relative flex items-center text-lg">
                                    <i class="fa-solid fa-plus mr-3 text-xl"></i>
                                    Tạo mới
                                </span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Filter Section -->
            <div class="relative mb-8">
                <div class="relative p-6 bg-white/10 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/20">
                    <div class="flex items-center mb-4">
                        <i class="fa-solid fa-filter text-cyan-400 text-xl mr-3"></i>
                        <h3 class="text-xl font-bold text-white">Bộ lọc tìm kiếm</h3>
                    </div>
                    <form method="get" class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <div class="col-span-2 relative">
                            <div class="relative">
                                <input id="q" name="q" value="@q"
                                    class="w-full rounded-2xl border-2 border-cyan-400/30 bg-white/20 backdrop-blur-sm pl-14 pr-6 py-4 text-white placeholder:text-white/60 focus:outline-none focus:ring-4 focus:ring-cyan-400/50 focus:border-cyan-400 transition-all duration-300 text-lg font-medium"
                                    placeholder="🔍 Tìm theo Email hoặc ID..." />
                                <div class="absolute inset-y-0 left-0 flex items-center pl-5 text-cyan-400">
                                    <i class="fa-solid fa-magnifying-glass text-xl"></i>
                                </div>
                            </div>
                        </div>
                        <div>
                            <select id="role" name="role"
                                class="w-full rounded-2xl border-2 border-purple-400/30 bg-white/20 backdrop-blur-sm px-6 py-4 text-white focus:outline-none focus:ring-4 focus:ring-purple-400/50 focus:border-purple-400 transition-all duration-300 text-lg font-medium">
                                <option value="" class="text-gray-800">-- Tất cả role --</option>
                                @foreach (var r in roles)
                                {
                                    <option value="@r.Value" selected="@(roleFilter == r.Value)" class="text-gray-800">
                                        @r.Text
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="md:col-span-3 flex items-center gap-4">
                            <button type="submit"
                                class="group relative px-8 py-4 bg-gradient-to-r from-cyan-500 to-blue-600 text-white font-bold rounded-2xl shadow-2xl hover:shadow-cyan-500/25 transform hover:-translate-y-1 transition-all duration-300 overflow-hidden">
                                <div
                                    class="absolute inset-0 bg-gradient-to-r from-blue-600 to-purple-600 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                                </div>
                                <span class="relative flex items-center text-lg">
                                    <i class="fa-solid fa-filter mr-3"></i>
                                    Áp dụng bộ lọc
                                </span>
                            </button>
                            <a asp-action="Index"
                                class="group relative px-8 py-4 bg-white/20 backdrop-blur-sm text-white font-bold rounded-2xl border-2 border-white/30 hover:bg-white/30 hover:border-white/50 transform hover:-translate-y-1 transition-all duration-300">
                                <span class="flex items-center text-lg">
                                    <i class="fa-solid fa-xmark mr-3"></i>
                                    Xóa bộ lọc
                                </span>
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Table Card -->
            <div class="relative">
                <div
                    class="relative bg-white/10 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/20 overflow-hidden">
                    <!-- Animated gradient border -->
                    <div
                        class="absolute inset-0 bg-gradient-to-r from-cyan-500 via-purple-500 to-pink-500 rounded-3xl opacity-75">
                    </div>
                    <div
                        class="absolute inset-[1px] bg-gradient-to-br from-indigo-900 via-purple-900 to-pink-900 rounded-3xl">
        </div>

            <!-- Table Header -->
                    <div
                        class="relative z-10 bg-gradient-to-r from-cyan-500/20 via-purple-500/20 to-pink-500/20 backdrop-blur-sm px-8 py-6 border-b border-white/20">
                        <h2 class="text-2xl font-bold text-white flex items-center">
                            <div
                                class="w-10 h-10 bg-gradient-to-r from-cyan-400 to-purple-500 rounded-xl flex items-center justify-center mr-4 shadow-lg">
                                <i class="fa-solid fa-table text-white text-lg"></i>
                            </div>
                    Danh sách tài khoản
                </h2>
            </div>

            <!-- Table Content -->
                    <div class="relative z-10 overflow-x-auto p-6">
                <table class="min-w-full">
                            <thead>
                                <tr class="border-b border-white/20">
                                    <th
                                        class="px-6 py-4 text-left text-sm font-bold text-cyan-300 uppercase tracking-wider">
                                <div class="flex items-center">
                                            <div
                                                class="w-8 h-8 bg-gradient-to-r from-cyan-400 to-blue-500 rounded-lg flex items-center justify-center mr-3">
                                                <i class="fa-solid fa-hashtag text-white text-sm"></i>
                                            </div>
                                    ID
                                </div>
                            </th>
                                    <th
                                        class="px-6 py-4 text-left text-sm font-bold text-purple-300 uppercase tracking-wider">
                                <div class="flex items-center">
                                            <div
                                                class="w-8 h-8 bg-gradient-to-r from-purple-400 to-pink-500 rounded-lg flex items-center justify-center mr-3">
                                                <i class="fa-solid fa-envelope text-white text-sm"></i>
                                            </div>
                                    Email
                                </div>
                            </th>
                                    <th
                                        class="px-6 py-4 text-left text-sm font-bold text-indigo-300 uppercase tracking-wider">
                                <div class="flex items-center">
                                            <div
                                                class="w-8 h-8 bg-gradient-to-r from-indigo-400 to-blue-500 rounded-lg flex items-center justify-center mr-3">
                                                <i class="fa-solid fa-key text-white text-sm"></i>
                                            </div>
                                    Role ID
                                </div>
                            </th>
                                    <th
                                        class="px-6 py-4 text-left text-sm font-bold text-pink-300 uppercase tracking-wider">
                                <div class="flex items-center">
                                            <div
                                                class="w-8 h-8 bg-gradient-to-r from-pink-400 to-rose-500 rounded-lg flex items-center justify-center mr-3">
                                                <i class="fa-solid fa-user-tag text-white text-sm"></i>
                                            </div>
                                    Tên vai trò
                                </div>
                            </th>
                                    <th
                                        class="px-6 py-4 text-center text-sm font-bold text-yellow-300 uppercase tracking-wider">
                                <div class="flex items-center justify-center">
                                            <div
                                                class="w-8 h-8 bg-gradient-to-r from-yellow-400 to-orange-500 rounded-lg flex items-center justify-center mr-3">
                                                <i class="fa-solid fa-cogs text-white text-sm"></i>
                                            </div>
                                    Thao tác
                                </div>
                            </th>
                        </tr>
                    </thead>
                            <tbody class="divide-y divide-white/10">
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var x in Model)
                            {
                                        <tr class="hover:bg-white/5 transition-all duration-300 group">
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <div class="flex items-center">
                                                    <div class="w-10 h-10 bg-gradient-to-r from-cyan-400 to-blue-500 rounded-xl flex items-center justify-center mr-4 shadow-lg group-hover:scale-110 transition-transform duration-300">
                                                        <span class="text-white text-sm font-bold">@x.IDAccount</span>
                                                    </div>
                                                    <span class="text-white font-medium text-lg">@x.IDAccount</span>
                                                </div>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <div class="flex items-center">
                                                    <div class="w-10 h-10 bg-gradient-to-r from-purple-400 to-pink-500 rounded-xl flex items-center justify-center mr-4 shadow-lg group-hover:scale-110 transition-transform duration-300">
                                                        <i class="fa-solid fa-envelope text-white text-sm"></i>
                                                    </div>
                                                    <span class="text-white/90 text-lg break-all">@x.Email</span>
                                                </div>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <div class="flex items-center">
                                                    <div class="w-10 h-10 bg-gradient-to-r from-indigo-400 to-blue-500 rounded-xl flex items-center justify-center mr-4 shadow-lg group-hover:scale-110 transition-transform duration-300">
                                                        <span class="text-white text-sm font-bold">@x.IDRole</span>
                                                    </div>
                                                    <span class="text-white font-medium text-lg">@x.IDRole</span>
                                                </div>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <div class="flex items-center">
                                                    <div class="w-10 h-10 bg-gradient-to-r from-pink-400 to-rose-500 rounded-xl flex items-center justify-center mr-4 shadow-lg group-hover:scale-110 transition-transform duration-300">
                                                        <i class="fa-solid fa-user-tag text-white text-sm"></i>
                                                    </div>
                                                    <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-bold bg-gradient-to-r from-pink-500/20 to-rose-500/20 text-pink-300 border border-pink-400/30">
                                                        @x.TenRole
                                                    </span>
                                                </div>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-center">
                                                <div class="flex items-center justify-center space-x-3">
                                                    <a asp-action="Details" asp-route-id="@x.IDAccount" class="group/btn relative px-4 py-2 bg-gradient-to-r from-cyan-500 to-blue-600 text-white text-sm font-bold rounded-xl hover:shadow-2xl hover:shadow-cyan-500/25 transform hover:-translate-y-1 transition-all duration-300 overflow-hidden">
                                                        <div class="absolute inset-0 bg-gradient-to-r from-blue-600 to-purple-600 opacity-0 group-hover/btn:opacity-100 transition-opacity duration-300"></div>
                                                        <span class="relative flex items-center">
                                                            <i class="fa-solid fa-eye mr-2"></i>
                                                            Xem
                                                        </span>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@x.IDAccount" class="group/btn relative px-4 py-2 bg-gradient-to-r from-emerald-500 to-green-600 text-white text-sm font-bold rounded-xl hover:shadow-2xl hover:shadow-emerald-500/25 transform hover:-translate-y-1 transition-all duration-300 overflow-hidden">
                                                        <div class="absolute inset-0 bg-gradient-to-r from-green-600 to-teal-600 opacity-0 group-hover/btn:opacity-100 transition-opacity duration-300"></div>
                                                        <span class="relative flex items-center">
                                                            <i class="fa-solid fa-pen-to-square mr-2"></i>
                                                            Sửa
                                                        </span>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@x.IDAccount" class="group/btn relative px-4 py-2 bg-gradient-to-r from-red-500 to-pink-600 text-white text-sm font-bold rounded-xl hover:shadow-2xl hover:shadow-red-500/25 transform hover:-translate-y-1 transition-all duration-300 overflow-hidden">
                                                        <div class="absolute inset-0 bg-gradient-to-r from-pink-600 to-rose-600 opacity-0 group-hover/btn:opacity-100 transition-opacity duration-300"></div>
                                                        <span class="relative flex items-center">
                                                            <i class="fa-solid fa-trash mr-2"></i>
                                                            Xóa
                                                        </span>
                                                    </a>
                                                </div>
                                            </td>
                                </tr>
                            }
                        }
                        else
                        {
                                    <tr>
                                        <td colspan="5" class="px-6 py-20 text-center">
                                            <div class="flex flex-col items-center">
                                                <div class="w-24 h-24 bg-gradient-to-r from-slate-400 to-slate-600 rounded-full flex items-center justify-center mb-8 shadow-2xl animate-pulse">
                                                    <i class="fa-solid fa-users-slash text-white text-3xl"></i>
                                                </div>
                                                <h3 class="text-2xl font-bold text-white mb-4">Chưa có tài khoản</h3>
                                                <p class="text-white/70 text-lg mb-8">Hãy tạo tài khoản đầu tiên để bắt đầu</p>
                                                <a asp-action="Create" class="group relative px-8 py-4 bg-gradient-to-r from-cyan-500 via-blue-500 to-purple-600 text-white rounded-2xl hover:shadow-2xl hover:shadow-cyan-500/25 transform hover:-translate-y-1 transition-all duration-300 font-bold text-lg overflow-hidden">
                                                    <div class="absolute inset-0 bg-gradient-to-r from-purple-600 via-pink-500 to-red-500 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                                                    <span class="relative flex items-center">
                                                        <i class="fa-solid fa-plus mr-3 text-xl"></i>
                                                        Tạo tài khoản đầu tiên
                                                    </span>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>
