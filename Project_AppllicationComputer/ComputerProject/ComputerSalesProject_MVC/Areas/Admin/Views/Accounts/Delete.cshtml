@using ComputerSales.Application.UseCaseDTO.Account_DTO
@model AccountOutputDTO
@{
    ViewData["Title"] = "Xóa tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="relative min-h-screen w-full overflow-hidden">
    <!-- Animated Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-red-900 via-orange-900 to-pink-900"></div>
    <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width=" 60" height="60" viewBox="0 0 60 60"
        xmlns="http://www.w3.org/2000/svg" %3E%3Cg fill="none" fill-rule="evenodd" %3E%3Cg fill="%239C92AC"
        fill-opacity="0.1" %3E%3Ccircle cx="30" cy="30" r="2" /%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] opacity-20"></div>

    <!-- Floating Orbs -->
    <div
        class="absolute top-20 left-10 w-72 h-72 bg-gradient-to-r from-red-400 to-orange-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-pulse">
    </div>
    <div
        class="absolute top-40 right-10 w-72 h-72 bg-gradient-to-r from-orange-400 to-pink-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-pulse delay-1000">
    </div>
    <div
        class="absolute -bottom-8 left-20 w-72 h-72 bg-gradient-to-r from-pink-400 to-red-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-pulse delay-500">
    </div>

    <div class="relative z-10 py-8 px-4 w-full">
        <div class="w-full px-4 py-4">
            <!-- Header Section -->
            <div class="relative mb-8">
                <div
                    class="relative p-8 bg-white/10 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/20 overflow-hidden">
                    <div
                        class="absolute inset-0 bg-gradient-to-r from-red-500 via-orange-500 to-pink-500 rounded-3xl opacity-75">
                    </div>
                    <div
                        class="absolute inset-[1px] bg-gradient-to-br from-red-900 via-orange-900 to-pink-900 rounded-3xl">
                    </div>

                    <div class="relative z-10 text-center">
                        <div
                            class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-r from-red-400 via-orange-500 to-pink-600 rounded-2xl mb-6 shadow-2xl transform rotate-3 hover:rotate-0 transition-transform duration-300">
                            <i class="fa-solid fa-trash text-white text-3xl"></i>
                        </div>
                        <h1
                            class="text-4xl font-black bg-gradient-to-r from-red-400 via-orange-500 to-pink-600 bg-clip-text text-transparent mb-4">
                            Xóa tài khoản
                        </h1>
                        <p class="text-white/80 text-lg font-medium">Bạn có chắc chắn muốn xóa tài khoản này không?</p>
                    </div>
                </div>
            </div>

            <!-- Warning Card -->
            <div class="relative">
                <div
                    class="relative bg-white/10 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/20 overflow-hidden">
                    <div
                        class="absolute inset-0 bg-gradient-to-r from-red-500 via-orange-500 to-pink-500 rounded-3xl opacity-75">
                    </div>
                    <div
                        class="absolute inset-[1px] bg-gradient-to-br from-red-900 via-orange-900 to-pink-900 rounded-3xl">
                    </div>

                    <div class="relative z-10 p-8">
                        <!-- Warning Alert -->
                        <div
                            class="bg-gradient-to-r from-red-500/20 to-pink-500/20 border-l-4 border-red-400 p-6 rounded-2xl mb-8">
                            <div class="flex items-center">
                                <i class="fa-solid fa-exclamation-triangle text-red-400 text-2xl mr-4"></i>
                                <div>
                                    <h3 class="text-xl font-bold text-red-300">Cảnh báo!</h3>
                                    <p class="text-red-200 text-lg">Hành động này không thể hoàn tác. Tài khoản sẽ bị
                                        xóa vĩnh viễn.</p>
                                </div>
                            </div>
                        </div>

                        <!-- Account Information -->
                        <div class="bg-gradient-to-r from-white/10 to-white/5 rounded-2xl p-6 mb-8">
                            <h3 class="text-xl font-bold text-white mb-6 flex items-center">
                                <i class="fa-solid fa-info-circle mr-3 text-cyan-400 text-xl"></i>
                                Thông tin tài khoản
                            </h3>

                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <!-- ID Account -->
                                <div class="flex items-center p-4 bg-white/10 backdrop-blur-sm rounded-xl shadow-lg">
                                    <div
                                        class="w-12 h-12 bg-gradient-to-r from-cyan-400 to-blue-500 rounded-xl flex items-center justify-center mr-4">
                                        <i class="fa-solid fa-hashtag text-white text-lg"></i>
                                    </div>
                                    <div>
                                        <p class="text-sm text-cyan-300 font-medium">ID Tài khoản</p>
                                        <p class="font-bold text-white text-lg">@Model.IDAccount</p>
                                    </div>
                                </div>

                                <!-- Email -->
                                <div class="flex items-center p-4 bg-white/10 backdrop-blur-sm rounded-xl shadow-lg">
                                    <div
                                        class="w-12 h-12 bg-gradient-to-r from-purple-400 to-pink-500 rounded-xl flex items-center justify-center mr-4">
                                        <i class="fa-solid fa-envelope text-white text-lg"></i>
                                    </div>
                                    <div>
                                        <p class="text-sm text-purple-300 font-medium">Email</p>
                                        <p class="font-bold text-white text-lg break-all">@Model.Email</p>
                                    </div>
                                </div>

                                <!-- Role -->
                                <div
                                    class="flex items-center p-4 bg-white/10 backdrop-blur-sm rounded-xl shadow-lg md:col-span-2">
                                    <div
                                        class="w-12 h-12 bg-gradient-to-r from-indigo-400 to-purple-500 rounded-xl flex items-center justify-center mr-4">
                                        <i class="fa-solid fa-user-tag text-white text-lg"></i>
                                    </div>
                                    <div>
                                        <p class="text-sm text-indigo-300 font-medium">Vai trò</p>
                                        <p class="font-bold text-white text-lg">@Model.IDRole - @Model.TenRole</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <form asp-action="Delete" asp-route-id="@Model.IDAccount" method="post">
                            @Html.AntiForgeryToken()
                            <div class="flex items-center justify-center gap-6 pt-8">
                                <button type="submit"
                                    class="group relative px-10 py-4 bg-gradient-to-r from-red-500 via-orange-500 to-pink-600 text-white font-bold rounded-2xl shadow-2xl hover:shadow-red-500/25 transform hover:-translate-y-1 transition-all duration-300 focus:outline-none focus:ring-4 focus:ring-red-300 overflow-hidden">
                                    <div
                                        class="absolute inset-0 bg-gradient-to-r from-pink-600 via-red-500 to-orange-500 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                                    </div>
                                    <span class="relative flex items-center text-lg">
                                        <i class="fa-solid fa-trash mr-3 text-xl"></i>
                                        Xóa tài khoản
                                    </span>
                                </button>
                                <a asp-action="Details" asp-route-id="@Model.IDAccount"
                                    class="group relative px-10 py-4 bg-white/20 backdrop-blur-sm text-white font-bold rounded-2xl border-2 border-white/30 hover:bg-white/30 hover:border-white/50 transform hover:-translate-y-1 transition-all duration-300 focus:outline-none focus:ring-4 focus:ring-white/20">
                                    <span class="flex items-center text-lg">
                                        <i class="fa-solid fa-times mr-3 text-xl"></i>
                                        Hủy bỏ
                                    </span>
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
