@model ComputerSalesProject_MVC.Areas.Admin.Models.AccountVM.AccountUpdateVM
@{
    ViewData["Title"] = "Chỉnh sửa vai trò tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <!-- Header -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-user-edit me-2"></i>
                        Chỉnh sửa vai trò tài khoản
                    </h4>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-0">Cập nhật vai trò cho tài khoản ID: <strong>@Model.IDAccount</strong></p>
                </div>
            </div>

            <!-- Alert Messages -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Form -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-area="Admin" asp-controller="Accounts" asp-action="Edit" asp-route-id="@Model.IDAccount"
                        method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="IDAccount" />

                        <!-- Email (Read-only) -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">
                                <i class="fas fa-envelope text-muted me-2"></i>
                                Email
                            </label>
                            <div class="input-group">
                                <input asp-for="Email" readonly class="form-control form-control-lg bg-light" />
                                <span class="input-group-text bg-light">
                                    <i class="fas fa-lock text-muted"></i>
                                </span>
                            </div>
                            <small class="form-text text-muted">Email không thể thay đổi</small>
                        </div>

                        <!-- Role Selection -->
                        <div class="mb-4">
                            <label asp-for="IDRole" class="form-label fw-bold">
                                <i class="fas fa-user-tag text-primary me-2"></i>
                                Vai trò
                            </label>
                            <select asp-for="IDRole" class="form-select form-select-lg">
                                <option value="">-- Chọn vai trò --</option>
                                <option value="1">Admin</option>
                                <option value="2">Manager</option>
                                <option value="3">Staff</option>
                                <option value="4">Customer</option>
                            </select>
                            <span asp-validation-for="IDRole" class="text-danger small"></span>
                            <small class="form-text text-muted">
                                <i class="fas fa-info-circle me-1"></i>
                                Chỉ có thể thay đổi vai trò của tài khoản
                            </small>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Details" asp-route-id="@Model.IDAccount"
                                class="btn btn-outline-secondary btn-lg me-md-2">
                                <i class="fas fa-arrow-left me-2"></i>
                                Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>
                                Cập nhật vai trò
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Role Information -->
            <div class="card mt-4">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="fas fa-info-circle text-info me-2"></i>
                        Thông tin vai trò
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-2">
                                <span class="badge bg-danger me-2">1</span>
                                <span class="fw-bold">Admin</span>
                            </div>
                            <div class="d-flex align-items-center mb-2">
                                <span class="badge bg-warning me-2">2</span>
                                <span class="fw-bold">Manager</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-2">
                                <span class="badge bg-info me-2">3</span>
                                <span class="fw-bold">Staff</span>
                            </div>
                            <div class="d-flex align-items-center mb-2">
                                <span class="badge bg-success me-2">4</span>
                                <span class="fw-bold">Customer</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
