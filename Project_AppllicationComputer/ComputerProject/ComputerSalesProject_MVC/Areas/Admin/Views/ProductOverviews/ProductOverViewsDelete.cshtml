@model ComputerSales.Application.UseCaseDTO.ProductOverView_DTO.ProductOverViewOutput
@{
    ViewData["Title"] = "Delete Overview Block";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    var createDateVN = ViewBag.CreateDateVN as string;
}

<div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <!-- Header -->
    <div class="px-6 py-4 border-b border-gray-200 bg-red-50">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-bold text-red-900">Delete Overview Block</h1>
                <p class="text-sm text-red-600 mt-1">This action cannot be undone</p>
            </div>
            <div class="flex items-center gap-3">
                <a asp-action="ProductOverViewsDetails" asp-route-id="@Model.ProductOverviewId" 
                   class="inline-flex items-center px-4 py-2 bg-gray-600 text-white text-sm font-medium rounded-lg hover:bg-gray-700 transition-colors">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Back to Details
                </a>
            </div>
        </div>
    </div>

    <!-- Content -->
    <div class="p-6">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Main Content -->
            <div class="lg:col-span-2 space-y-6">
                <!-- Warning -->
                <div class="bg-red-50 border border-red-200 rounded-lg p-6">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="fas fa-exclamation-triangle text-red-400 text-2xl"></i>
                        </div>
                        <div class="ml-3">
                            <h3 class="text-lg font-medium text-red-800">Are you sure you want to delete this overview block?</h3>
                            <div class="mt-2 text-sm text-red-700">
                                <p>This action will permanently remove the overview block from the product. This action cannot be undone.</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Block Information -->
                <div class="bg-gray-50 rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Block Information</h3>
                    
                    <dl class="grid grid-cols-1 gap-4">
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Block Type</dt>
                            <dd class="mt-1">
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
                                    @(Model.BlockType.ToString() switch {
                                        "Text" => "bg-green-100 text-green-800",
                                        "List" => "bg-yellow-100 text-yellow-800", 
                                        "Image" => "bg-purple-100 text-purple-800",
                                        "Logo" => "bg-indigo-100 text-indigo-800",
                                        "Table" => "bg-red-100 text-red-800",
                                        _ => "bg-gray-100 text-gray-800"
                                    })">
                                    <i class="fas @(Model.BlockType.ToString() switch {
                                        "Text" => "fa-text-width",
                                        "List" => "fa-list", 
                                        "Image" => "fa-image",
                                        "Logo" => "fa-trademark",
                                        "Table" => "fa-table",
                                        _ => "fa-question"
                                    }) mr-2"></i>
                                    @Model.BlockType
                                </span>
                            </dd>
                        </div>

                        <div>
                            <dt class="text-sm font-medium text-gray-500">Display Order</dt>
                            <dd class="mt-1 text-sm text-gray-900">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                    @Model.DisplayOrder
                                </span>
                            </dd>
                        </div>

                        <div>
                            <dt class="text-sm font-medium text-gray-500">Product ID</dt>
                            <dd class="mt-1 text-sm text-gray-900">@Model.ProductId</dd>
                        </div>

                        <div>
                            <dt class="text-sm font-medium text-gray-500">Created Date</dt>
                            <dd class="mt-1 text-sm text-gray-900">@createDateVN</dd>
                        </div>
                    </dl>
                </div>

                <!-- Content Preview -->
                <div class="bg-white border border-gray-200 rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Content to be Deleted</h3>
                    
                    @if (Model.BlockType.ToString() == "Text" || Model.BlockType.ToString() == "List")
                    {
                        <div class="prose max-w-none">
                            @if (!string.IsNullOrEmpty(Model.TextContent))
                            {
                                @if (Model.BlockType.ToString() == "List")
                                {
                                    <ul class="list-disc list-inside space-y-1">
                                        @foreach (var line in Model.TextContent.Split('\n', StringSplitOptions.RemoveEmptyEntries))
                                        {
                                            <li>@line.Trim()</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <p class="whitespace-pre-wrap">@Model.TextContent</p>
                                }
                            }
                            else
                            {
                                <p class="text-gray-500 italic">No text content</p>
                            }
                        </div>
                    }
                    else if (Model.BlockType.ToString() == "Image" || Model.BlockType.ToString() == "Logo")
                    {
                        <div class="space-y-4">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <div class="border border-gray-200 rounded-lg p-4">
                                    <img src="@Model.ImageUrl" alt="@Model.Caption" class="max-w-full h-auto rounded-lg">
                                </div>
                            }
                            else
                            {
                                <div class="border-2 border-dashed border-gray-300 rounded-lg p-8 text-center">
                                    <i class="fas fa-image text-4xl text-gray-400 mb-2"></i>
                                    <p class="text-gray-500">No image available</p>
                                </div>
                            }
                            
                            @if (!string.IsNullOrEmpty(Model.Caption))
                            {
                                <div class="bg-gray-50 rounded-lg p-4">
                                    <h4 class="text-sm font-medium text-gray-700 mb-2">Caption:</h4>
                                    <p class="text-sm text-gray-600">@Model.Caption</p>
                                </div>
                            }
                        </div>
                    }
                    else if (Model.BlockType.ToString() == "Table")
                    {
                        <div class="bg-gray-50 rounded-lg p-4">
                            <p class="text-gray-500 italic">Table content</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Sidebar -->
            <div class="space-y-6">
                <!-- Delete Confirmation -->
                <div class="bg-red-50 border border-red-200 rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-red-900 mb-4">Xác nhận xóa</h3>
                    <form asp-action="Delete"
                    asp-route-id="@Model.ProductOverviewId"
                    method="post"
                    class="space-y-4">
                        @Html.AntiForgeryToken()
                        <input asp-for="ProductOverviewId" type="hidden" />
                        
                        <div class="text-sm text-red-700 mb-4">
                            <p>Bạn có chắc chắn muốn xóa overview block này không?</p>
                        </div>
                        
                        <div class="space-y-3">
                            <button type="submit" 
                                class="w-full inline-flex items-center justify-center px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-lg hover:bg-red-700 transition-colors">
                                <i class="fas fa-trash mr-2"></i>
                                Xác nhận xóa
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Alternative Actions -->
                <div class="bg-white border border-gray-200 rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Alternative Actions</h3>
                    <div class="space-y-3">
                        <a asp-action="Edit" asp-route-id="@Model.ProductOverviewId" 
                           class="w-full inline-flex items-center justify-center px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 transition-colors">
                            <i class="fas fa-edit mr-2"></i>
                            Edit Instead
                        </a>
                        <a asp-action="ProductOverViewsDetails" asp-route-id="@Model.ProductOverviewId" 
                           class="w-full inline-flex items-center justify-center px-4 py-2 bg-gray-600 text-white text-sm font-medium rounded-lg hover:bg-gray-700 transition-colors">
                            <i class="fas fa-eye mr-2"></i>
                            View Details
                        </a>
                        <a asp-action="ProductOverViewsIndex" asp-route-productId="@Model.ProductId" 
                           class="w-full inline-flex items-center justify-center px-4 py-2 bg-gray-600 text-white text-sm font-medium rounded-lg hover:bg-gray-700 transition-colors">
                            <i class="fas fa-arrow-left mr-2"></i>
                            Back to List
                        </a>
                    </div>
                </div>

                <!-- Impact Information -->
                <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-yellow-900 mb-4">Impact</h3>
                    <div class="space-y-3 text-sm text-yellow-800">
                        <div class="flex items-start">
                            <i class="fas fa-info-circle mr-2 mt-0.5"></i>
                            <span>This will remove the overview block from the product page.</span>
                        </div>
                        <div class="flex items-start">
                            <i class="fas fa-exclamation-triangle mr-2 mt-0.5"></i>
                            <span>Other overview blocks will maintain their display order.</span>
                        </div>
                        <div class="flex items-start">
                            <i class="fas fa-ban mr-2 mt-0.5"></i>
                            <span>This action cannot be undone.</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

