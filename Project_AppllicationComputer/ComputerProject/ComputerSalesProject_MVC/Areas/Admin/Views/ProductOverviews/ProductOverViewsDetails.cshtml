@model ComputerSales.Application.UseCaseDTO.ProductOverView_DTO.ProductOverViewOutput
@{
    ViewData["Title"] = "Overview Details";
    var createDateVN = ViewBag.CreateDateVN as string;
        Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}

<div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <!-- Header -->
    <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-bold text-gray-900">Overview Block Details</h1>
                <p class="text-sm text-gray-600 mt-1">View detailed information about this overview block</p>
            </div>
            <div class="flex items-center gap-3">
                <a asp-action="Edit" asp-route-id="@Model.ProductOverviewId" 
                   class="inline-flex items-center px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 transition-colors">
                    <i class="fas fa-edit mr-2"></i>
                    Edit
                </a>
                <a asp-action="ProductOverViewsIndex" asp-route-productId="@Model.ProductId" 
                   class="inline-flex items-center px-4 py-2 bg-gray-600 text-white text-sm font-medium rounded-lg hover:bg-gray-700 transition-colors">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Back to List
                </a>
            </div>
        </div>
    </div>

    <!-- Content -->
    <div class="p-6">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Main Information -->
            <div class="lg:col-span-2">
                <div class="bg-gray-50 rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Block Information</h3>
                    
                    <dl class="grid grid-cols-1 gap-4">
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Block Type</dt>
                            <dd class="mt-1">
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
                                    @(Model.BlockType.ToString() switch {
                                        "Text" => "bg-green-100 text-green-800",
                                        "List" => "bg-yellow-100 text-yellow-800", 
                                        "Image" => "bg-purple-100 text-purple-800",
                                        "Logo" => "bg-indigo-100 text-indigo-800",
                                        "Table" => "bg-red-100 text-red-800",
                                        _ => "bg-gray-100 text-gray-800"
                                    })">
                                    <i class="fas @(Model.BlockType.ToString() switch {
                                        "Text" => "fa-text-width",
                                        "List" => "fa-list", 
                                        "Image" => "fa-image",
                                        "Logo" => "fa-trademark",
                                        "Table" => "fa-table",
                                        _ => "fa-question"
                                    }) mr-2"></i>
                                    @Model.BlockType
                                </span>
                            </dd>
                        </div>

                        <div>
                            <dt class="text-sm font-medium text-gray-500">Display Order</dt>
                            <dd class="mt-1 text-sm text-gray-900">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                    @Model.DisplayOrder
                                </span>
                            </dd>
                        </div>

                        <div>
                            <dt class="text-sm font-medium text-gray-500">Product ID</dt>
                            <dd class="mt-1 text-sm text-gray-900">@Model.ProductId</dd>
                        </div>

                        <div>
                            <dt class="text-sm font-medium text-gray-500">Created Date</dt>
                            <dd class="mt-1 text-sm text-gray-900">@createDateVN</dd>
                        </div>
                    </dl>
                </div>

                <!-- Content Preview -->
                <div class="mt-6 bg-white border border-gray-200 rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Content Preview</h3>
                    
                    @if (Model.BlockType.ToString() == "Text" || Model.BlockType.ToString() == "List")
                    {
                        <div class="prose max-w-none">
                            @if (!string.IsNullOrEmpty(Model.TextContent))
                            {
                                @if (Model.BlockType.ToString() == "List")
                                {
                                    <ul class="list-disc list-inside space-y-1">
                                        @foreach (var line in Model.TextContent.Split('\n', StringSplitOptions.RemoveEmptyEntries))
                                        {
                                            <li>@line.Trim()</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <p class="whitespace-pre-wrap">@Model.TextContent</p>
                                }
                            }
                            else
                            {
                                <p class="text-gray-500 italic">No text content available</p>
                            }
                        </div>
                    }
                    else if (Model.BlockType.ToString() == "Image" || Model.BlockType.ToString() == "Logo")
                    {
                        <div class="space-y-4">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <div class="border border-gray-200 rounded-lg p-4">
                                    <img src="@Model.ImageUrl" alt="@Model.Caption" class="max-w-full h-auto rounded-lg">
                                </div>
                            }
                            else
                            {
                                <div class="border-2 border-dashed border-gray-300 rounded-lg p-8 text-center">
                                    <i class="fas fa-image text-4xl text-gray-400 mb-2"></i>
                                    <p class="text-gray-500">No image available</p>
                                </div>
                            }
                            
                            @if (!string.IsNullOrEmpty(Model.Caption))
                            {
                                <div class="bg-gray-50 rounded-lg p-4">
                                    <h4 class="text-sm font-medium text-gray-700 mb-2">Caption:</h4>
                                    <p class="text-sm text-gray-600">@Model.Caption</p>
                                </div>
                            }
                        </div>
                    }
                    else if (Model.BlockType.ToString() == "Table")
                    {
                        <div class="bg-gray-50 rounded-lg p-4">
                            <p class="text-gray-500 italic">Table content preview not available</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Sidebar -->
            <div class="space-y-6">
                <!-- Quick Actions -->
                <div class="bg-white border border-gray-200 rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h3>
                    <div class="space-y-3">
                        <a asp-action="Edit" asp-route-id="@Model.ProductOverviewId" 
                           class="w-full inline-flex items-center justify-center px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 transition-colors">
                            <i class="fas fa-edit mr-2"></i>
                            Edit Block
                        </a>
                        <a asp-action="ProductOverViewsDelete" asp-route-id="@Model.ProductOverviewId" 
                           class="w-full inline-flex items-center justify-center px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-lg hover:bg-red-700 transition-colors">
                            <i class="fas fa-trash mr-2"></i>
                            Delete Block
                        </a>
                    </div>
                </div>

                <!-- Block Statistics -->
                <div class="bg-white border border-gray-200 rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Block Statistics</h3>
                    <dl class="space-y-3">
                        <div class="flex justify-between">
                            <dt class="text-sm text-gray-500">Block ID:</dt>
                            <dd class="text-sm font-medium text-gray-900">@Model.ProductOverviewId</dd>
                        </div>
                        <div class="flex justify-between">
                            <dt class="text-sm text-gray-500">Type:</dt>
                            <dd class="text-sm font-medium text-gray-900">@Model.BlockType</dd>
                        </div>
                        <div class="flex justify-between">
                            <dt class="text-sm text-gray-500">Order:</dt>
                            <dd class="text-sm font-medium text-gray-900">@Model.DisplayOrder</dd>
                        </div>
                    </dl>
                </div>

                <!-- Navigation -->
                <div class="bg-white border border-gray-200 rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Navigation</h3>
                    <div class="space-y-2">
                        <a asp-action="ProductOverViewsIndex" asp-route-productId="@Model.ProductId" 
                           class="block w-full text-left px-3 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-lg transition-colors">
                            <i class="fas fa-list mr-2"></i>
                            All Overview Blocks
                        </a>
                        <a asp-area="Admin" asp-controller="Product" asp-action="ProductDetails" asp-route-id="@Model.ProductId" 
                           class="block w-full text-left px-3 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-lg transition-colors">
                            <i class="fas fa-box mr-2"></i>
                            View Product
                        </a>
                        <a asp-area="Admin" asp-controller="Product" asp-action="Index" 
                           class="block w-full text-left px-3 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-lg transition-colors">
                            <i class="fas fa-arrow-left mr-2"></i>
                            All Products
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
