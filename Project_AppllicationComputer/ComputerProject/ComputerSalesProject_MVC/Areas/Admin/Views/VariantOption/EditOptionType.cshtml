@model ComputerSales.Application.UseCaseDTO.OptionalType_DTO.OptionalTypeInput
@{
    ViewData["Title"] = "Sửa OptionType";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen bg-gradient-to-br from-emerald-50 via-teal-50 to-cyan-50">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
            <div class="px-6 py-4 bg-gradient-to-r from-amber-500 to-orange-600">
                <h2 class="text-xl font-bold text-white">Sửa OptionType</h2>
            </div>

            <div class="p-8">
                <form asp-action="EditOptionType" method="post">
                    @Html.AntiForgeryToken()
                    <div class="space-y-6">
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Code (không sửa)</label>
                            <input value="@Model.Code" disabled
                                   class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl bg-gray-100 text-gray-600" />
                        </div>

                        <div>
                            <label asp-for="Name" class="block text-sm font-semibold text-gray-700 mb-2">Tên OptionType</label>
                            <input asp-for="Name"
                                   class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-transparent" />
                            <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
                        </div>
                    </div>

                    <div class="flex flex-col sm:flex-row gap-4 pt-6 mt-6 border-t border-gray-200">
                        <button type="submit"
                                class="flex-1 inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-amber-500 to-orange-600 text-white font-semibold rounded-xl hover:from-amber-600 hover:to-orange-700">
                            <i class="fas fa-save mr-2"></i>Lưu thay đổi
                        </button>

                        <a asp-action="Index" asp-route-variantId="@ViewBag.VariantId"
                           class="flex-1 inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-gray-500 to-gray-600 text-white font-semibold rounded-xl hover:from-gray-600 hover:to-gray-700">
                            <i class="fas fa-arrow-left mr-2"></i>Quay lại
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
