@model ComputerSales.Application.UseCaseDTO.VariantPrice_DTO.VariantPriceInput_Output.VariantPriceInputDTO
@{
    ViewData["Title"] = "Thêm thông tin giá";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@if (TempData["Success"] != null)
{
    <div class="bg-green-100 border-l-4 border-green-500 text-green-800 p-4 mb-6 rounded-lg shadow">
        <i class="fas fa-check-circle mr-2"></i> @TempData["Success"]
    </div>
}
@if (TempData["Warning"] != null)
{
    <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-800 p-4 mb-6 rounded-lg shadow">
        <i class="fas fa-exclamation-triangle mr-2"></i> @TempData["Warning"]
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="bg-red-100 border-l-4 border-red-500 text-red-800 p-4 mb-6 rounded-lg shadow">
        <i class="fas fa-times-circle mr-2"></i> @TempData["Error"]
    </div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="bg-red-100 border-l-4 border-red-500 text-red-800 p-4 mb-6 rounded-lg shadow">
        <i class="fas fa-exclamation-triangle mr-2"></i>
        <ul class="list-disc ml-5">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<div class="min-h-screen bg-gradient-to-br from-emerald-50 via-teal-50 to-cyan-50">
    <div class="bg-white shadow-lg border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <div class="p-3 bg-gradient-to-r from-emerald-500 to-teal-600 rounded-xl shadow-lg">
                        <i class="fas fa-plus-circle text-white text-2xl"></i>
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900">Thêm thông tin giá</h1>
                        <p class="text-gray-600 mt-1">Tạo thông tin giá cho biến thể sản phẩm</p>
                    </div>
                </div>
                <div class="flex items-center space-x-3">
                    <a asp-area="Admin" asp-controller="VariantPrice" asp-action="IndexVariantPrice"
                       asp-route-variantId="@Model.VariantId"
                       class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-gray-500 to-gray-600 text-white text-sm font-medium rounded-lg hover:from-gray-600 hover:to-gray-700">
                        <i class="fas fa-arrow-left mr-2"></i>Quay lại
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
            <div class="px-6 py-4 bg-gradient-to-r from-emerald-500 to-teal-600">
                <h2 class="text-xl font-bold text-white flex items-center">
                    <i class="fas fa-edit mr-3"></i>Thông tin giá sản phẩm
                </h2>
            </div>

            <div class="p-8">
                <form asp-area="Admin"
                      asp-controller="VariantPrice"
                      asp-action="CreateVariantPrice"
                      asp-route-variantId="@Model.VariantId"
                      method="post"
                      class="space-y-6">
                    @Html.AntiForgeryToken()


                    <input type="hidden" asp-for="VariantId" />

                    <!-- Currency -->
                    <div class="group">
                        <label asp-for="Currency" class="block text-sm font-semibold text-gray-700 mb-2">
                            <i class="fas fa-coins text-emerald-500 mr-2"></i>Đơn vị tiền tệ <span class="text-red-500">*</span>
                        </label>
                        <div class="relative">
                            <input asp-for="Currency" required
                                   class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:ring-2 focus:ring-emerald-500 focus:border-transparent"
                                   placeholder="VD: VND, USD..." />
                            <div class="absolute inset-y-0 right-0 flex items-center pr-3">
                                <i class="fas fa-money-bill text-gray-400"></i>
                            </div>
                        </div>
                        <span asp-validation-for="Currency" class="text-red-500 text-sm mt-1 block"></span>
                    </div>

                    <!-- Prices -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="group">
                            <label asp-for="Price" class="block text-sm font-semibold text-gray-700 mb-2">
                                <i class="fas fa-tag text-green-500 mr-2"></i>Giá gốc <span class="text-red-500">*</span>
                            </label>
                            <div class="relative">
                                <input asp-for="Price" type="number" step="0.01" required
                                       class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-transparent"
                                       placeholder="Nhập giá gốc..." />
                                <div class="absolute inset-y-0 right-0 flex items-center pr-3">
                                    <span class="text-gray-400 font-semibold">VNĐ</span>
                                </div>
                            </div>
                            <span asp-validation-for="Price" class="text-red-500 text-sm mt-1 block"></span>
                        </div>

                        <div class="group">
                            <label asp-for="DiscountPrice" class="block text-sm font-semibold text-gray-700 mb-2">
                                <i class="fas fa-percentage text-red-500 mr-2"></i>Giá khuyến mãi
                            </label>
                            <div class="relative">
                                <input asp-for="DiscountPrice" type="number" step="0.01"
                                       class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-transparent"
                                       placeholder="Nhập giá khuyến mãi..." />
                                <div class="absolute inset-y-0 right-0 flex items-center pr-3">
                                    <span class="text-gray-400 font-semibold">VNĐ</span>
                                </div>
                            </div>
                            <span asp-validation-for="DiscountPrice" class="text-red-500 text-sm mt-1 block"></span>
                            <p class="text-sm text-gray-500 mt-1">Để trống hoặc bằng 0 nếu không có khuyến mãi</p>
                        </div>
                    </div>

                    <!-- Status -->
                    <div class="group">
                        <label asp-for="Status" class="block text-sm font-semibold text-gray-700 mb-2">
                            <i class="fas fa-info-circle text-blue-500 mr-2"></i>Trạng thái <span class="text-red-500">*</span>
                        </label>
                        <div class="relative">
                            <select asp-for="Status" asp-items="ViewBag.StatusList" required
                                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                                <option value="">-- Chọn trạng thái --</option>
                            </select>
                            <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                                <i class="fas fa-chevron-down text-gray-400"></i>
                            </div>
                        </div>
                        <span asp-validation-for="Status" class="text-red-500 text-sm mt-1 block"></span>
                    </div>

                    <!-- Validity -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="group">
                            <label asp-for="ValidFrom" class="block text-sm font-semibold text-gray-700 mb-2">
                                <i class="fas fa-calendar-alt text-purple-500 mr-2"></i>Hiệu lực từ ngày
                            </label>
                            <div class="relative">
                                <input asp-for="ValidFrom" type="date"
                                       class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-transparent" />
                            </div>
                            <span asp-validation-for="ValidFrom" class="text-red-500 text-sm mt-1 block"></span>
                        </div>

                        <div class="group">
                            <label asp-for="ValidTo" class="block text-sm font-semibold text-gray-700 mb-2">
                                <i class="fas fa-calendar-times text-orange-500 mr-2"></i>Hiệu lực đến ngày
                            </label>
                            <div class="relative">
                                <input asp-for="ValidTo" type="date"
                                       class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:ring-2 focus:ring-orange-500 focus:border-transparent" />
                            </div>
                            <span asp-validation-for="ValidTo" class="text-red-500 text-sm mt-1 block"></span>
                        </div>
                    </div>

                    <!-- Actions -->    
                    <div class="flex flex-col sm:flex-row gap-4 pt-6 border-t border-gray-200">
                        <button type="submit"
                                class="flex-1 inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-emerald-500 to-teal-600 text-white font-semibold rounded-xl hover:from-emerald-600 hover:to-teal-700">
                            <i class="fas fa-save mr-3"></i>Lưu thông tin giá
                        </button>

                        <a asp-area="Admin" asp-controller="VariantPrice" asp-action="IndexVariantPrice"
                           asp-route-variantId="@Model.VariantId"
                           class="flex-1 inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-gray-500 to-gray-600 text-white font-semibold rounded-xl hover:from-gray-600 hover:to-gray-700">
                            <i class="fas fa-times mr-3"></i>Hủy bỏ
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
