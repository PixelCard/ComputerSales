@model ComputerSalesProject_MVC.Models.CustomerEditVM_Customer;

@{
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-4xl mx-auto px-4">
        <!-- Header -->
        <div class="mb-8">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900 mb-2">Chỉnh sửa thông tin khách hàng</h1>
                    <p class="text-gray-600">Cập nhật thông tin cá nhân và liên hệ của khách hàng</p>
                </div>
                <a asp-controller="Profile" asp-action="AccountInfo" 
                   class="bg-gray-100 hover:bg-gray-200 text-gray-700 px-4 py-2 rounded-lg transition-colors duration-200 flex items-center">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Quay lại
                </a>
            </div>
        </div>

        <!-- Customer Info Badge -->
        <div class="bg-emerald-50 border border-emerald-200 rounded-lg p-4 mb-8">
            <div class="flex items-center">
                <div class="w-10 h-10 bg-emerald-100 rounded-lg flex items-center justify-center mr-3">
                    <i class="fas fa-user text-emerald-600"></i>
                </div>
                <div>
                    <h3 class="text-sm font-semibold text-emerald-800">Thông tin định danh</h3>
                    <p class="text-sm text-emerald-700">
                        ID Tài khoản: <strong>#@Model.IDAccount</strong>
                    </p>
                </div>
            </div>
        </div>

        <!-- Form Card -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
            <!-- Form Header -->
            <div class="bg-gradient-to-r from-emerald-500 to-emerald-600 px-8 py-6">
                <div class="flex items-center">
                    <div class="bg-white/20 rounded-lg p-3 mr-4">
                        <i class="fas fa-edit text-white text-xl"></i>
                    </div>
                    <div>
                        <h2 class="text-xl font-semibold text-white">Biểu mẫu chỉnh sửa</h2>
                        <p class="text-emerald-100 text-sm">Điền đầy đủ thông tin bên dưới</p>
                    </div>
                </div>
            </div>

            <!-- Form Content -->
            <div class="px-8 py-8">
                <form asp-action="EditByUser" asp-route-id="@Model.IDCustomer" 
                method="post" class="space-y-6"
                enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <!-- Validation Summary -->
                    <div asp-validation-summary="ModelOnly"
                         class="bg-red-50 border border-red-200 rounded-lg p-4 text-red-700 text-sm"></div>

                    <input asp-for="IDCustomer" hidden />

                    <input asp-for="IDAccount" hidden />

                    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                        <!-- Left Column -->
                        <div class="space-y-6">
                            <div class="space-y-2">
                              <label class="block text-sm font-semibold text-gray-700">
                                        <i class="fas fa-upload text-gray-400 mr-2"></i>
                                        Tải ảnh từ máy (ưu tiên hơn URL)
                              </label>
                              <input asp-for="AvatarFile" type="file" accept="image/*"
                                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-colors" />
                            </div>

                            <!-- Image Preview -->
                            <div class="space-y-2">
                                <label class="block text-sm font-semibold text-gray-700">
                                    <i class="fas fa-eye text-gray-400 mr-2"></i>
                                    Xem trước ảnh
                                </label>
                                <div id="imagePreview"
                                     class="w-32 h-32 border-2 border-dashed border-gray-300 rounded-lg flex items-center justify-center bg-gray-50">
                                    @if (!string.IsNullOrWhiteSpace(Model.IMG))
                                    {
                                        <img src="@Model.IMG" alt="Preview" class="w-full h-full object-cover rounded-lg" />
                                    }
                                    else
                                    {
                                        <div class="text-center">
                                            <i class="fas fa-image text-gray-400 text-2xl mb-2"></i>
                                            <p class="text-xs text-gray-500">Chưa có ảnh</p>
                                        </div>
                                    }
                                </div>
                            </div>

                            <!-- Name Field -->
                            <div class="space-y-2">
                                <label asp-for="Name" class="block text-sm font-semibold text-gray-700">
                                    <i class="fas fa-user text-gray-400 mr-2"></i>
                                    Họ và tên <span class="text-red-500">*</span>
                                </label>
                                <input asp-for="Name"
                                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-colors"
                                       placeholder="Nhập họ và tên đầy đủ" />
                                <span asp-validation-for="Name" class="text-red-600 text-sm"></span>
                            </div>

                            <!-- Phone Field -->
                            <div class="space-y-2">
                                <label asp-for="sdt" class="block text-sm font-semibold text-gray-700">
                                    <i class="fas fa-phone text-gray-400 mr-2"></i>
                                    Số điện thoại <span class="text-red-500">*</span>
                                </label>
                                <input asp-for="sdt"
                                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-colors"
                                       placeholder="0123456789" />
                                <span asp-validation-for="sdt" class="text-red-600 text-sm"></span>
                            </div>
                        </div>

                        <!-- Right Column -->
                        <div class="space-y-6">
                            <!-- Address Field -->
                            <div class="space-y-2">
                                <label asp-for="address" class="block text-sm font-semibold text-gray-700">
                                    <i class="fas fa-map-marker-alt text-gray-400 mr-2"></i>
                                    Địa chỉ <span class="text-red-500">*</span>
                                </label>
                                <input asp-for="address"
                                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-colors"
                                       placeholder="Số nhà, đường, phường, quận, thành phố" />
                                <span asp-validation-for="address" class="text-red-600 text-sm"></span>
                            </div>

                            <!-- Birth Date Field -->
                            <div class="space-y-2">
                                <label asp-for="Date" class="block text-sm font-semibold text-gray-700">
                                    <i class="fas fa-calendar text-gray-400 mr-2"></i>
                                    Ngày sinh
                                </label>
                                <input asp-for="Date" type="date"
                                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-colors" />
                                <span asp-validation-for="Date" class="text-red-600 text-sm"></span>
                            </div>

                            <!-- Description Field -->
                            <div class="space-y-2">
                                <label asp-for="Description" class="block text-sm font-semibold text-gray-700">
                                    <i class="fas fa-sticky-note text-gray-400 mr-2"></i>
                                    Ghi chú
                                </label>
                                <textarea asp-for="Description" rows="5"
                                          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-colors resize-none"
                                          placeholder="Thông tin bổ sung về khách hàng..."></textarea>
                                <span asp-validation-for="Description" class="text-red-600 text-sm"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex flex-col sm:flex-row gap-4 pt-8 border-t border-gray-200">
                        <button type="submit"
                                class="flex-1 bg-emerald-600 hover:bg-emerald-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors duration-200 flex items-center justify-center">
                            <i class="fas fa-save mr-2"></i>
                            Lưu thay đổi
                        </button>
                        <a asp-controller="Profile" asp-action="AccountInfo"
                           class="flex-1 bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold py-3 px-6 rounded-lg transition-colors duration-200 flex items-center justify-center text-decoration-none">
                            <i class="fas fa-times mr-2"></i>
                            Hủy bỏ
                        </a>
                    </div>
                </form>
            </div>

            @if (TempData["Success"] is string ok && !string.IsNullOrWhiteSpace(ok))
            {
                <div id="alert-success" class="mb-4 rounded-lg border border-emerald-200 bg-emerald-50 px-4 py-3 text-emerald-800 flex items-start justify-between">
                    <div class="flex items-start">
                        <span class="mr-2">✅</span>
                        <span>@ok</span>
                    </div>
                    <button type="button" onclick="document.getElementById('alert-success')?.remove()" class="ml-4 text-emerald-700 hover:text-emerald-900">✕</button>
                </div>
            }

            @if (TempData["Error"] is string err && !string.IsNullOrWhiteSpace(err))
            {
                <div id="alert-error" class="mb-4 rounded-lg border border-red-200 bg-red-50 px-4 py-3 text-red-800 flex items-start justify-between">
                    <div class="flex items-start">
                        <span class="mr-2">⚠️</span>
                        <span>@err</span>
                    </div>
                    <button type="button" onclick="document.getElementById('alert-error')?.remove()" class="ml-4 text-red-700 hover:text-red-900">✕</button>
                </div>
            }
        </div>

        <!-- Help Section -->
        <div class="mt-8 bg-blue-50 border border-blue-200 rounded-lg p-6">
            <div class="flex items-start">
                <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center mr-4 mt-1">
                    <i class="fas fa-lightbulb text-blue-600"></i>
                </div>
                <div>
                    <h3 class="text-lg font-semibold text-blue-800 mb-2">Hướng dẫn sử dụng</h3>
                    <ul class="text-sm text-blue-700 space-y-1">
                        <li><i class="fas fa-check-circle mr-2"></i>Các trường có dấu (*) là bắt buộc phải điền</li>
                         <li><i class="fas fa-check-circle mr-2"></i>Chấp nhận JPG/PNG/WebP, tối đa 2MB.</li>
                        <li><i class="fas fa-check-circle mr-2"></i>Số điện thoại nên có 10-11 chữ số</li>
                        <li><i class="fas fa-check-circle mr-2"></i>Địa chỉ nên ghi đầy đủ để dễ liên hệ</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <style>
        /* Custom validation message styling */
        .field-validation-error {
            display: block !important;
            color: #dc2626 !important;
            font-size: 0.875rem !important;
            margin-top: 0.5rem !important;
        }

        .field-validation-error:before {
            content: "⚠ ";
            margin-right: 0.25rem;
        }

        .input-validation-error {
            border-color: #dc2626 !important;
            box-shadow: 0 0 0 1px #dc2626 !important;
        }

        .validation-summary-errors {
            background-color: #fef2f2 !important;
            border: 1px solid #fecaca !important;
            border-radius: 0.5rem !important;
            padding: 1rem !important;
            color: #991b1b !important;
            font-size: 0.875rem !important;
        }

        .validation-summary-errors ul {
            margin: 0 !important;
            padding-left: 1.25rem !important;
        }

        .validation-summary-errors li {
            margin-bottom: 0.25rem !important;
        }
    </style>

    <script>
        // Image preview function
        function previewImage(url) {
            const preview = document.getElementById('imagePreview');

            if (url && url.trim() !== '') {
                // Validate if it's a valid URL
                try {
                    new URL(url);
                    preview.innerHTML = `
                                <img src="${url}" alt="Preview"
                                     class="w-full h-full object-cover rounded-lg"
                                     onerror="showImageError()" />
                            `;
                } catch (e) {
                    showImageError();
                }
            } else {
                showDefaultPreview();
            }
        }

        function showImageError() {
            const preview = document.getElementById('imagePreview');
            preview.innerHTML = `
                        <div class="text-center">
                            <i class="fas fa-exclamation-triangle text-red-400 text-2xl mb-2"></i>
                            <p class="text-xs text-red-500">URL không hợp lệ</p>
                        </div>
                    `;
        }

        function showDefaultPreview() {
            const preview = document.getElementById('imagePreview');
            preview.innerHTML = `
                        <div class="text-center">
                            <i class="fas fa-image text-gray-400 text-2xl mb-2"></i>
                            <p class="text-xs text-gray-500">Chưa có ảnh</p>
                        </div>
                    `;
        }

        setTimeout(()=>document.getElementById('alert-success')?.remove(), 3500);
        setTimeout(()=>document.getElementById('alert-error')?.remove(), 3500);

        // Initialize preview on page load
        document.addEventListener('DOMContentLoaded', function () {
            const imgInput = document.querySelector('input[name="IMG"]');
            if (imgInput && imgInput.value) {
                previewImage(imgInput.value);
            }
        });
    </script>
}