@using ComputerSales.Application.UseCaseDTO.Cart_DTO.Cart_Page
@model CartPageDTO
@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4 mb-6">
            <h1 class="text-xl sm:text-2xl font-bold text-gray-900">
                Shopping Cart (@Model.ItemsCount Items)
            </h1>

            <div class="hidden sm:flex flex-wrap items-center gap-2 sm:gap-4 text-xs sm:text-sm">
                <button class="text-blue-600 hover:underline whitespace-nowrap">MOVE ALL TO WISH LIST</button>
                <button class="text-blue-600 hover:underline whitespace-nowrap">REMOVE ALL</button>
                <button class="text-blue-600 hover:underline whitespace-nowrap">PRINT</button>
            </div>
        </div>

        <div class="flex flex-col lg:flex-row gap-8">
            <!-- Left Column - Cart Items -->
            <div class="flex-1">
                @foreach (var line in Model.Lines.Where(l => !l.IsChildService))
                {
                    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 sm:p-6 mb-4">
                        <div class="flex flex-col sm:flex-row gap-4 sm:gap-6 lg:gap-10">

                            <!-- Image -->
                            <div class="flex-shrink-0 mx-auto sm:mx-0">
                                <img src="@line.ImageUrl" alt="@line.Name"
                                     class="w-24 h-24 sm:w-32 sm:h-32 object-contain rounded-lg bg-gray-100" />
                            </div>

                            <!-- Details -->
                            <div class="flex-1">

                                <!-- Mobile -->
                                <div class="flex sm:hidden gap-4">
                                    <div class="flex-1">
                                        <h3 class="text-base font-semibold text-gray-900 mb-2">@line.Name</h3>
                                        <div class="text-sm text-gray-600 mb-2">
                                            <div>@line.OptionSummary</div>
                                            <div class="text-xs text-gray-500">SKU: @line.SKU</div>
                                        </div>
                                    </div>
                                    <div class="flex flex-col items-end gap-2">
                                        <div class="text-right">
                                            <div class="text-lg font-bold text-gray-900">@line.SalePrice.ToString("C")</div>
                                            @if (line.ListPrice > line.SalePrice)
                                            {
                                                <div class="text-sm text-gray-400 line-through">@line.ListPrice.ToString("C")</div>
                                            }
                                        </div>

                                        <form asp-action="UpdateQty" method="post" class="flex flex-col items-center">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="cartId" value="@Model.CartId" />
                                            <input type="hidden" name="itemId" value="@line.CartItemId" />
                                            <input type="number" name="qty" value="@line.Quantity" min="1"
                                                   class="w-12 h-8 px-1 py-1 border border-gray-300 rounded text-center text-sm" />
                                            @if (line.PerItemLimit.HasValue)
                                            {
                                                <div class="text-xs text-gray-500">Limit @line.PerItemLimit</div>
                                            }
                                        </form>
                                    </div>
                                </div>

                                <!-- Desktop -->
                                <div class="hidden sm:block">
                                    <div class="flex flex-col lg:flex-row lg:justify-between gap-4">
                                        <div class="flex-1">
                                            <h3 class="text-base sm:text-lg font-semibold text-gray-900 mb-2">@line.Name</h3>
                                            <div class="text-sm text-gray-600 mb-4">@line.OptionSummary</div>
                                        </div>

                                        <div class="flex items-start" style="gap:3.5rem">
                                            <!-- Quantity -->
                                            <form asp-action="UpdateQty" method="post" class="flex flex-col items-center">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="cartId" value="@Model.CartId" />
                                                <input type="hidden" name="itemId" value="@line.CartItemId" />
                                                <input type="number" name="qty" value="@line.Quantity" min="1"
                                                       class="w-16 h-10 px-2 py-1 border border-gray-300 rounded text-center text-lg font-medium" />
                                                @if (line.PerItemLimit.HasValue)
                                                {
                                                    <div class="text-xs text-gray-500 mt-1">Limit @line.PerItemLimit</div>
                                                }
                                            </form>

                                            <!-- Price -->
                                            <div class="flex flex-col">
                                                <div class="text-2xl font-bold text-gray-900">@line.SalePrice.ToString("C")</div>
                                                @if (line.ListPrice > line.SalePrice)
                                                {
                                                    <div class="text-sm text-gray-400 line-through">@line.ListPrice.ToString("C")</div>
                                                    <div class="inline-block bg-orange-500 text-white text-xs px-2 py-1 rounded mt-1 w-fit">
                                                        Save: @line.Savings.ToString("C") (@line.SavingsPercent%)
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Actions -->
                                <div class="hidden sm:flex sm:flex-row sm:items-center sm:justify-between gap-3 mt-4">
                                    <div></div>
                                    <form asp-action="Remove" method="post">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="cartId" value="@Model.CartId" />
                                        <input type="hidden" name="itemId" value="@line.CartItemId" />
                                        <button class="flex items-center gap-1 text-red-600 hover:underline text-sm">REMOVE</button>
                                    </form>
                                </div>

                                <!-- Protection plan: gọi command AddProtection -->
                                <div class="hidden sm:block mt-6 p-3 bg-gray-50 rounded-lg border-t border-gray-200">
                                    <div class="flex items-center justify-between gap-3">
                                        <div class="text-sm">
                                            <div class="font-medium text-gray-900">Protection Plan Options</div>
                                            <div class="text-gray-600">Add a Protection Plan, starting at $24.99</div>
                                        </div>
                                        <form asp-action="AddProtection" method="post">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="cartId" value="@Model.CartId" />
                                            <input type="hidden" name="parentItemId" value="@line.CartItemId" />
                                            <input type="hidden" name="planVariantId" value="/* id biến thể plan */" />
                                            <button class="bg-blue-600 text-white px-4 py-2 rounded text-sm hover:bg-blue-700">Add</button>
                                        </form>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Right Column - Summary -->
            <div class="w-full lg:w-80">
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 sm:p-6 lg:sticky lg:top-8">
                    <h2 class="text-lg sm:text-xl font-bold text-gray-900 mb-4">Summary</h2>

                    <div class="space-y-3 mb-4">
                        <div class="flex justify-between">
                            <span class="text-gray-600">Item(s):</span>
                            <<span class="font-semibold">@Model.Subtotal.ToString("C")</span>
                        </div>

                        <div class="flex justify-between items-center">
                            <span class="text-gray-600">Est. Shipping:</span>
                            <div class="flex items-center gap-1">
                                <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"></path>
                                </svg>
                                <span class="font-semibold text-green-600">
                                    @(Model.ShippingFee == 0 ? "FREE" : Model.ShippingFee.ToString("C"))
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- Promo Code -->
                    <div class="mb-4">
                        <button class="flex items-center gap-2 text-blue-600 hover:underline text-sm">
                            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"></path>
                            </svg>
                            Apply Promo Code +
                        </button>
                    </div>

                    <!-- Total -->
                    <div class="border-t border-gray-200 pt-4 mb-6">
                        <div class="flex justify-between text-lg font-bold">
                            <span>Est. Total:</span>
                            <span>@Model.GrandTotal.ToString("C")</span>
                        </div>
                    </div>

                    <!-- Checkout Button -->
                    <button class="w-full bg-orange-500 hover:bg-orange-600 text-white font-bold py-3 px-4 rounded-lg flex items-center justify-center gap-2 transition-colors">
                        <span class="hidden sm:inline">SECURE CHECKOUT</span>
                        <span class="sm:hidden">CHECKOUT</span>
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

