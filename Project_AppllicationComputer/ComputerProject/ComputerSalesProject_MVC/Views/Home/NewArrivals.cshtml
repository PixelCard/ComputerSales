@using ComputerSalesProject_MVC.Models.Product_ViewModel
@model IEnumerable<ProductListItemVM>
@{
    ViewData["Title"] = "Sản phẩm mới nhất";
}
<script src="https://cdn.tailwindcss.com"></script>

<main class="max-w-[1320px] xl:max-w-[1400px] mx-auto px-3 lg:px-4 py-6">

    <!-- Header -->
    <div class="flex items-end justify-between mb-4">
        <h1 class="text-2xl font-bold">Sản phẩm mới nhất</h1>

        <!-- Toolbar (tuỳ biến) -->
        <div class="flex items-center gap-2 text-sm">
            <a href="/search?sort=new" class="px-3 py-1.5 rounded-full border hover:bg-gray-50">Tất cả</a>
            <a href="/search?sort=new&ship=free" class="px-3 py-1.5 rounded-full border hover:bg-gray-50">Freeship</a>
            <a href="/search?sort=new&discount=1" class="px-3 py-1.5 rounded-full border hover:bg-gray-50">Đang giảm</a>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="bg-white rounded-2xl border p-6 text-center text-gray-600">
            Chưa có sản phẩm nào.
        </div>
    }
    else
    {
        <!-- Grid -->
        <section class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 2xl:grid-cols-5 gap-4">
            @foreach (var item in Model)
            {
                <a href="/product/@item.ProductId" class="group block bg-white rounded-2xl border hover:shadow-lg transition overflow-hidden">
                    <div class="aspect-[4/3] bg-white grid place-items-center overflow-hidden">
                        <img src="@item.ImageUrl" alt="@item.Title"
                             class="h-full w-auto object-contain group-hover:scale-[1.02] transition" />
                    </div>

                    <div class="p-3">
                        <div class="flex items-center gap-2 mb-1">
                            @* Badge “Mới” từ controller *@
                            @if (item.IsNew)
                            {
                                <span class="px-2 py-0.5 text-[11px] rounded bg-red-500/10 text-red-600 font-semibold">Mới</span>
                            }
                            @if (item.FreeShip)
                            {
                                <span class="px-2 py-0.5 text-[11px] rounded bg-emerald-500/10 text-emerald-700 font-medium">
                                    Freeship
                                </span>
                            }
                            @if (item.VariantCount.GetValueOrDefault() > 1)
                            {
                                <span class="px-2 py-0.5 text-[11px] rounded bg-slate-100 text-slate-600">
                                    @item.VariantCount biến thể
                                </span>
                            }
                        </div>

                        <div class="line-clamp-2 text-sm font-semibold text-gray-900 min-h-[40px]">
                            @item.Title
                        </div>

                        <div class="mt-2 flex items-baseline gap-2">
                            <div class="text-lg font-extrabold text-gray-900">
                                @item.Currency@item.Price.ToString("0.##")
                            </div>
                            @if (item.OldPrice.HasValue && item.OldPrice.Value > item.Price)
                            {
                                <div class="text-xs text-gray-400 line-through">
                                    @item.Currency@item.OldPrice.Value.ToString("0.##")
                                </div>
                                <span class="text-[11px] text-red-600 font-semibold">
                                    -@Math.Round((item.OldPrice.Value - item.Price) / item.OldPrice.Value * 100m, 0)%
                                </span>
                            }
                        </div>

                        @* Optional: Rating *@
                        @if (item.Rating.HasValue)
                        {
                            <div class="mt-1 text-[12px] text-amber-600">
                                ★ @item.Rating.Value.ToString("0.0")
                                <span class="text-gray-500">(@(item.RatingCount ?? 0))</span>
                            </div>
                        }
                    </div>
                </a>
            }
        </section>
    }
</main>
