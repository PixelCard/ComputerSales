@model HomeIndexVM

@await Html.PartialAsync("_Header")

<main class="w-full px-6 md:px-8 lg:px-10 xl:px-12 2xl:px-16 py-4">
    @await Html.PartialAsync("_Banner")

    @* @await Html.PartialAsync("_BestSellingVariants") *@
    @* _ProductNew cần IEnumerable<ProductListItemVM> *@
    @* @await Html.PartialAsync("_ProductNew", Model.NewArrivals) *@

    @await Html.PartialAsync("_BestSellingVariants", Model.BestSellingVariants)


    <!-- Featured Products Section -->
    <section class="mt-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Featured Products</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5 gap-6">
            @foreach (var p in Model.Featured)
            {
                @await Html.PartialAsync("_ProductCard", p)
            }
        </div>
    </section>
</main>
