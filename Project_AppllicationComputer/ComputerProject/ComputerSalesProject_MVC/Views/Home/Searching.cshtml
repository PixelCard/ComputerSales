@model List<ProductCardVM>
<script src="https://cdn.tailwindcss.com"></script>

<main class="max-w-[1200px] mx-auto px-3 lg:px-4 py-6">
    <h1 class="text-xl font-semibold mb-4">Search results</h1>

    @if (Model == null || !Model.Any())
    {
        <div class="p-8 bg-white rounded-2xl shadow text-gray-600">
            No products found. Try SKU / Slug / Accessories name.
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
            @foreach (var p in Model)
            {
                @await Html.PartialAsync("_ProductCard", p)
            }
        </div>
    }
</main>
