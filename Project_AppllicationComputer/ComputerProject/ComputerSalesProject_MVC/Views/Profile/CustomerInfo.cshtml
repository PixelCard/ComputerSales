@model ComputerSalesProject_MVC.Models.CustomerDetailsViewModel
@{
    ViewData["Title"] = "Thông tin khách hàng";
}

@await Html.PartialAsync("_Header")

<div class="pt-16 pb-8 px-6 md:px-8 lg:px-12">
    <div class="md:flex md:gap-6">
        <div class="md:w-1/4">
             @* @await Html.PartialAsync("~/Views/Shared/_ProfileNav.cshtml") *@
            @await Component.InvokeAsync("ProfileNav")
        </div>
        <div class="md:w-3/4">
            <h4 class="mb-3 font-bold text-slate-800">Profile details</h4>
            <div class="rounded-xl shadow-lg bg-white">
                <div class="p-4 md:p-6">
                    <div class="text-xs tracking-widest text-slate-500 font-bold mb-3">PROFILE DETAILS</div>
                    <div class="grid md:grid-cols-2 gap-4">
                        <div>
                            <div class="text-slate-500 text-sm mb-1">Full name</div>
                            <div class="bg-slate-50 border border-slate-200 rounded-lg px-3 py-2 font-semibold">
                                @Model.FullName</div>
                        </div>
                        <div>
                            <div class="text-slate-500 text-sm mb-1">Phone</div>
                            <div class="bg-slate-50 border border-slate-200 rounded-lg px-3 py-2 font-semibold">
                                @Model.Phone</div>
                        </div>
                        <div class="md:col-span-2">
                            <div class="text-slate-500 text-sm mb-1">Address</div>
                            <div class="bg-slate-50 border border-slate-200 rounded-lg px-3 py-2 font-semibold">
                                @Model.Address</div>
                        </div>
                        <div>
                            <div class="text-slate-500 text-sm mb-1">Birth date</div>
                            <div class="bg-slate-50 border border-slate-200 rounded-lg px-3 py-2 font-semibold">
                                @(Model.BirthDate?.ToString("dd/MM/yyyy") ?? "")</div>
                        </div>
                        <div>
                            <div class="text-slate-500 text-sm mb-1">Gender</div>
                            <div class="bg-slate-50 border border-slate-200 rounded-lg px-3 py-2 font-semibold">
                                @Model.Gender</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
