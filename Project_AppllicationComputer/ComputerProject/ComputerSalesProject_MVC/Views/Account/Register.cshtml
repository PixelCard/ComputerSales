@model ComputerSales.Application.UseCaseDTO.Account_DTO.RegisterDTO.RegisterRequestDTO
@{
    ViewData["Title"] = "Đăng ký tài khoản";
    Layout = null;
}
<script src="https://cdn.tailwindcss.com"></script>

<style>
    .gradient-bg {
        background: linear-gradient(135deg, #0b2f63 0%, #002D6A 50%, #1e40af 100%);
    }
    .glass-effect {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }
    .error-message {
        animation: slideIn 0.3s ease-out;
    }
    keyframes slideIn {
        from { opacity: 0; transform: translateY(-10px); }
        to { opacity: 1; transform: translateY(0); }
    }
    .floating-animation {
        animation: float 6s ease-in-out infinite;
    }
    keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-20px); }
    }
    .form-field {
        transition: all 0.3s ease;
    }
    .form-field:focus-within {
        transform: translateY(-2px);
    }
</style>

<div class="min-h-screen gradient-bg flex items-center justify-center relative overflow-hidden">
    <!-- Background decorative elements -->
    <div class="absolute inset-0 z-0 pointer-events-none">
        <!-- Floating geometric shapes -->
        <div class="absolute top-20 left-20 w-32 h-32 bg-orange-400/10 rounded-full floating-animation"></div>
        <div class="absolute top-40 right-32 w-24 h-24 bg-white/5 rounded-lg floating-animation" style="animation-delay: -2s;"></div>
        <div class="absolute bottom-32 left-32 w-40 h-40 bg-orange-500/10 rounded-full floating-animation" style="animation-delay: -4s;"></div>
        <div class="absolute bottom-20 right-20 w-28 h-28 bg-white/5 rounded-lg floating-animation" style="animation-delay: -1s;"></div>
        
        <!-- Subtle grid pattern -->
        <div class="absolute inset-0 opacity-5" style="background-image: radial-gradient(circle, white 1px, transparent 1px); background-size: 50px 50px;"></div>
    </div>
    <div class="relative z-10 flex flex-col items-center justify-center min-h-screen w-full px-4 py-8">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { id = "registerForm" }))
        {
            @Html.AntiForgeryToken()

            <!-- Info Message -->
            @if (TempData["Info"] != null)
            {
                <div class="error-message bg-blue-500/20 border border-blue-500/30 rounded-lg p-4 mb-6 max-w-md w-full">
                    <div class="flex items-center">
                        <i class="fas fa-info-circle text-blue-400 mr-3"></i>
                        <span class="text-blue-200 text-sm">@TempData["Info"]</span>
                    </div>
                </div>
            }

            <div class="glass-effect rounded-2xl shadow-2xl p-8 w-full max-w-md">
                <!-- Header -->
                <div class="text-center mb-8">
                    <div class="w-16 h-16 bg-gradient-to-br from-orange-400 to-orange-600 rounded-full flex items-center justify-center mx-auto mb-4 shadow-lg">
                        <i class="fas fa-user-plus text-white text-xl"></i>
                    </div>
                    <h2 class="text-3xl font-bold text-white mb-2">Create Account</h2>
                    <p class="text-white/70">Join our community today</p>
                </div>

                <!-- Validation Errors -->
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="error-message bg-red-500/20 border border-red-500/30 rounded-lg p-4 mb-6">
                        <div class="flex items-start">
                            <i class="fas fa-exclamation-triangle text-red-400 mr-3 mt-0.5"></i>
                            <div class="text-red-200 text-sm">
                                @Html.ValidationSummary(true, "", new { @class = "text-red-200" })
                            </div>
                        </div>
                    </div>
                }

                <!-- Form Fields -->
                <div class="space-y-4">
                    <!-- Full Name -->
                    <div class="form-field">
                        <label class="block text-white/90 mb-2 text-sm font-medium" for="UserName">
                            <i class="fas fa-user mr-2"></i>Full Name
                        </label>
                        <div class="relative">
                            <input class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-3 text-white placeholder-white/60 focus:outline-none focus:border-orange-400 focus:ring-2 focus:ring-orange-400/20 transition-all"
                                   type="text" id="UserName" name="UserName" placeholder="Enter your full name" required />
                            <div class="absolute right-3 top-1/2 transform -translate-y-1/2">
                                <i class="fas fa-user text-white/60"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="form-field">
                        <label class="block text-white/90 mb-2 text-sm font-medium" for="Email">
                            <i class="fas fa-envelope mr-2"></i>Email Address
                        </label>
                        <div class="relative">
                            <input class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-3 text-white placeholder-white/60 focus:outline-none focus:border-orange-400 focus:ring-2 focus:ring-orange-400/20 transition-all"
                                   type="email" id="Email" name="Email" placeholder="Enter your email" required />
                            <div class="absolute right-3 top-1/2 transform -translate-y-1/2">
                                <i class="fas fa-envelope text-white/60"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="form-field">
                        <label class="block text-white/90 mb-2 text-sm font-medium" for="Description">
                            <i class="fas fa-info-circle mr-2"></i>Description
                        </label>
                        <div class="relative">
                            <input class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-3 text-white placeholder-white/60 focus:outline-none focus:border-orange-400 focus:ring-2 focus:ring-orange-400/20 transition-all"
                                   type="text" id="Description" name="Description_User" placeholder="Tell us about yourself" required />
                            <div class="absolute right-3 top-1/2 transform -translate-y-1/2">
                                <i class="fas fa-info-circle text-white/60"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Address -->
                    <div class="form-field">
                        <label class="block text-white/90 mb-2 text-sm font-medium" for="address">
                            <i class="fas fa-map-marker-alt mr-2"></i>Address
                        </label>
                        <div class="relative">
                            <input class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-3 text-white placeholder-white/60 focus:outline-none focus:border-orange-400 focus:ring-2 focus:ring-orange-400/20 transition-all"
                                   type="text" id="address" name="address" placeholder="Enter your address" />
                            <div class="absolute right-3 top-1/2 transform -translate-y-1/2">
                                <i class="fas fa-map-marker-alt text-white/60"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Phone -->
                    <div class="form-field">
                        <label class="block text-white/90 mb-2 text-sm font-medium" for="phone">
                            <i class="fas fa-phone mr-2"></i>Phone Number
                        </label>
                        <div class="relative">
                            <input class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-3 text-white placeholder-white/60 focus:outline-none focus:border-orange-400 focus:ring-2 focus:ring-orange-400/20 transition-all"
                                   type="tel" id="phone" name="phone" placeholder="Enter your phone number" maxlength="12" />
                            <div class="absolute right-3 top-1/2 transform -translate-y-1/2">
                                <i class="fas fa-phone text-white/60"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Password -->
                    <div class="form-field">
                        <label class="block text-white/90 mb-2 text-sm font-medium" for="Password">
                            <i class="fas fa-lock mr-2"></i>Password
                        </label>
                        <div class="relative">
                            <input class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-3 pr-12 text-white placeholder-white/60 focus:outline-none focus:border-orange-400 focus:ring-2 focus:ring-orange-400/20 transition-all"
                                   type="password" id="Password" name="Password" placeholder="Create a password" required />
                            <button type="button" onclick="togglePassword()" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-white/60 hover:text-white transition-colors">
                                <i class="fas fa-eye" id="passwordToggleIcon"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Date of Birth -->
                    <div class="form-field">
                        <label class="block text-white/90 mb-2 text-sm font-medium" for="Date">
                            <i class="fas fa-calendar-alt mr-2"></i>Date of Birth
                        </label>
                        <div class="relative">
                            <input class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-3 text-white placeholder-white/60 focus:outline-none focus:border-orange-400 focus:ring-2 focus:ring-orange-400/20 transition-all"
                                   type="date" id="Date" name="Date" max="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                            <div class="absolute right-3 top-1/2 transform -translate-y-1/2">
                                <i class="fas fa-calendar-alt text-white/60"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Submit Button -->
                <button id="submitBtn" type="submit" class="w-full bg-gradient-to-r from-orange-500 to-orange-600 hover:from-orange-600 hover:to-orange-700 text-white font-bold py-3 rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200 mt-6">
                    <i class="fas fa-user-plus mr-2"></i>Create Account
                </button>

                <!-- Login Link -->
                <div class="text-center mt-6 text-white/80">
                    Already have an account?
                    <a href="@Url.Action("Login", "Account")" class="text-orange-400 hover:text-orange-300 font-semibold transition-colors">
                        Sign In
                    </a>
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('Password');
            const toggleIcon = document.getElementById('passwordToggleIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }

        // Add loading state to form submission
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('registerForm');
            const btn = document.getElementById('submitBtn');
            if (!form || !btn) return;

            form.addEventListener('submit', function () {
                btn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Đang tạo tài khoản...';
                btn.disabled = true;
            });
        });

        // Add smooth focus animations
        document.querySelectorAll('.form-field input').forEach(input => {
            input.addEventListener('focus', function() {
                this.parentElement.parentElement.classList.add('form-field');
            });
            
            input.addEventListener('blur', function() {
                this.parentElement.parentElement.classList.remove('form-field');
            });
        });
    </script>
}
