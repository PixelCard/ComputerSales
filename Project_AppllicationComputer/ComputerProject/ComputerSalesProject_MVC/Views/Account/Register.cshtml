@model ComputerSalesProject_MVC.Models.RegisterViewModel

@{
    ViewData["Title"] = "Đăng ký tài khoản";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Register</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .doodle-bg {
            background-image: url("data:image/svg+xml,%3Csvg width='100' height='100' xmlns='http://www.w3.org/2000/svg'%3E%3Cg%3E%3Cpath d='M20,20 Q30,10 40,20 Q50,30 40,40 Q30,50 20,40 Q10,30 20,20' fill='none' stroke='white' stroke-width='1' opacity='0.3'/%3E%3Cpath d='M60,60 Q70,50 80,60 Q90,70 80,80 Q70,90 60,80 Q50,70 60,60' fill='none' stroke='white' stroke-width='1' opacity='0.3'/%3E%3Cpath d='M10,70 Q20,60 30,70 Q40,80 30,90 Q20,100 10,90 Q0,80 10,70' fill='none' stroke='white' stroke-width='1' opacity='0.3'/%3E%3Cpath d='M70,10 Q80,0 90,10 Q100,20 90,30 Q80,40 70,30 Q60,20 70,10' fill='none' stroke='white' stroke-width='1' opacity='0.3'/%3E%3C/g%3E%3C/svg%3E");
            background-size: 200px 200px;
        }
    </style>
</head>

<body class="min-h-screen bg-purple-600 doodle-bg flex items-center justify-center relative">
    <!-- Hand-drawn doodles overlay -->
    <div class="absolute inset-0 pointer-events-none opacity-20">
        <svg class="w-full h-full" viewBox="0 0 1000 1000" fill="none" xmlns="http://www.w3.org/2000/svg">
            <!-- Books -->
            <path d="M100,100 L120,100 L120,140 L100,140 Z" fill="white" opacity="0.4"/>
            <path d="M130,100 L150,100 L150,140 L130,140 Z" fill="white" opacity="0.4"/>
            <path d="M160,100 L180,100 L180,140 L160,140 Z" fill="white" opacity="0.4"/>
            
            <!-- Hearts -->
            <path d="M200,120 C200,110 210,100 220,100 C230,100 240,110 240,120 C240,130 220,150 220,150 C220,150 200,130 200,120 Z" fill="white" opacity="0.4"/>
            <path d="M300,120 C300,110 310,100 320,100 C330,100 340,110 340,120 C340,130 320,150 320,150 C320,150 300,130 300,120 Z" fill="white" opacity="0.4"/>
            
            <!-- Music notes -->
            <circle cx="400" cy="120" r="8" fill="white" opacity="0.4"/>
            <path d="M408,120 L408,100" stroke="white" stroke-width="2" opacity="0.4"/>
            <path d="M400,100 Q410,95 420,100" stroke="white" stroke-width="2" opacity="0.4" fill="none"/>
            
            <!-- Sports equipment -->
            <circle cx="500" cy="120" r="15" fill="none" stroke="white" stroke-width="2" opacity="0.4"/>
            <path d="M485,120 L515,120" stroke="white" stroke-width="2" opacity="0.4"/>
            
            <!-- Clothing -->
            <path d="M600,100 L620,100 L625,140 L615,150 L605,150 L595,140 Z" fill="white" opacity="0.4"/>
            
            <!-- More scattered doodles -->
            <circle cx="100" cy="300" r="12" fill="white" opacity="0.3"/>
            <path d="M200,300 Q210,290 220,300 Q230,310 220,320 Q210,330 200,320 Q190,310 200,300" fill="white" opacity="0.3"/>
            <path d="M300,300 L320,300 L315,320 L305,320 Z" fill="white" opacity="0.3"/>
            
            <circle cx="400" cy="300" r="10" fill="white" opacity="0.3"/>
            <path d="M500,300 Q510,290 520,300 Q530,310 520,320 Q510,330 500,320 Q490,310 500,300" fill="white" opacity="0.3"/>
            
            <!-- Bottom section doodles -->
            <path d="M100,600 L120,600 L120,640 L100,640 Z" fill="white" opacity="0.3"/>
            <circle cx="200" cy="620" r="15" fill="white" opacity="0.3"/>
            <path d="M300,600 Q310,590 320,600 Q330,610 320,620 Q310,630 300,620 Q290,610 300,600" fill="white" opacity="0.3"/>
            
            <circle cx="400" cy="620" r="12" fill="white" opacity="0.3"/>
            <path d="M500,600 L520,600 L515,620 L505,620 Z" fill="white" opacity="0.3"/>
            <path d="M600,600 Q610,590 620,600 Q630,610 620,620 Q610,630 600,620 Q590,610 600,600" fill="white" opacity="0.3"/>
            
            <!-- Right side doodles -->
            <circle cx="800" cy="150" r="10" fill="white" opacity="0.3"/>
            <path d="M900,150 Q910,140 920,150 Q930,160 920,170 Q910,180 900,170 Q890,160 900,150" fill="white" opacity="0.3"/>
            <path d="M800,300 L820,300 L820,340 L800,340 Z" fill="white" opacity="0.3"/>
            <circle cx="900" cy="320" r="12" fill="white" opacity="0.3"/>
        </svg>
    </div>

    <div class="relative z-10 flex flex-col items-center justify-center min-h-screen w-full px-4">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="bg-white rounded-3xl shadow-2xl p-8 w-full max-w-sm">
                <!-- Profile Picture Section -->
                <div class="flex flex-col items-center mb-8">
                    <div class="relative">
                        <div class="w-24 h-24 bg-gray-200 rounded-full flex items-center justify-center overflow-hidden">
                            <svg class="w-12 h-12 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <button type="button" class="absolute -bottom-1 -right-1 w-8 h-8 bg-white rounded-full flex items-center justify-center shadow-lg border-2 border-purple-600">
                            <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                            </svg>
                        </button>
                    </div>
                    <p class="text-purple-600 font-medium mt-2">Add Profile</p>
                </div>

                <!-- Form Fields -->
                <div class="space-y-4">
                    <div>
                        <input class="w-full px-4 py-3 border border-gray-300 rounded-xl text-gray-700 placeholder-purple-600 focus:outline-none focus:border-purple-500 focus:ring-1 focus:ring-purple-500" 
                               type="text" id="UserName" name="UserName" placeholder="Name" required />
                    </div>
                    <div>
                        <input class="w-full px-4 py-3 border border-gray-300 rounded-xl text-gray-700 placeholder-purple-600 focus:outline-none focus:border-purple-500 focus:ring-1 focus:ring-purple-500" 
                               type="email" id="Email" name="Email" placeholder="Email ID" required />
                    </div>
                    <div>
                        <input class="w-full px-4 py-3 border border-gray-300 rounded-xl text-gray-700 placeholder-purple-600 focus:outline-none focus:border-purple-500 focus:ring-1 focus:ring-purple-500"
                               type="text" id="Description" name="Description_User" placeholder="Description" required />
                    </div>
                    <div>
                        <input class="w-full px-4 py-3 border border-gray-300 rounded-xl text-gray-700 placeholder-purple-600 focus:outline-none focus:border-purple-500 focus:ring-1 focus:ring-purple-500" 
                               type="password" id="PasswordHash" name="PasswordHash" placeholder="Password" required />
                    </div>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="w-full bg-white border-2 border-purple-600 text-purple-600 font-bold py-3 rounded-xl mt-6 hover:bg-purple-50 transition-colors duration-200">
                    SIGN IN
                </button>

                @if (ViewBag.Error != null)
                {
                    <div class="text-red-500 text-center mt-4 text-sm">@ViewBag.Error</div>
                }

                <!-- Login Link -->
                <div class="text-center mt-6 text-gray-600">
                    Đã có tài khoản?
                    <a href="@Url.Action("LoginPage", "Account")" class="text-purple-600 font-semibold hover:underline">Đăng nhập</a>
                </div>
            </div>
        }
    </div>
</body>
</html>


