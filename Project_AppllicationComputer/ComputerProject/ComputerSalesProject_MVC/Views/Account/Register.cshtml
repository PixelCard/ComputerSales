@model ComputerSalesProject_MVC.Models.RegisterViewModel

@{
    ViewData["Title"] = "Đăng ký tài khoản";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Register</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="min-h-screen relative bg-gradient-to-br from-slate-900 via-indigo-900 to-slate-800">
    <div class="absolute inset-0 -z-10 overflow-hidden">
        <div class="absolute -top-32 -left-32 h-96 w-96 rounded-full bg-indigo-600/30 blur-3xl"></div>
        <div class="absolute -bottom-24 -right-24 h-96 w-96 rounded-full bg-fuchsia-500/20 blur-3xl"></div>
    </div>

    <div class="min-h-screen flex items-center justify-center px-4">
        <div class="w-full max-w-[1100px] grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
            <!-- Left: Branding/hero (match login) -->
            <div class="hidden lg:block text-slate-100">
                <div class="space-y-6">
                    <div class="inline-flex items-center gap-3">
                        <div class="h-10 w-10 rounded-xl bg-white/10 backdrop-blur flex items-center justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="h-6 w-6 text-white"><path d="M12 3l9 4.5v9L12 21 3 16.5v-9L12 3zm0 2.06L5 8v8l7 3.06L19 16V8l-7-2.94z"/></svg>
                        </div>
                        <span class="text-xl font-semibold tracking-wide">ComputerSales</span>
                    </div>
                    <h1 class="text-4xl font-extrabold leading-tight">Create your account</h1>
                    <p class="text-slate-300 max-w-md">Join us to save your favorites, track orders, and enjoy faster checkout.</p>
                </div>
            </div>

            <!-- Right: Register card -->
            <div class="bg-white/10 backdrop-blur-xl rounded-2xl border border-white/15 shadow-2xl p-6 sm:p-8">
                <div class="mb-6 text-center lg:text-left">
                    <h2 class="text-2xl sm:text-3xl font-bold text-white">Register</h2>
                    <p class="text-slate-200/80 mt-1">Fill in your details to sign up</p>
                </div>

                @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="space-y-4">
                        <div>
                            <label class="block text-slate-200 mb-2" for="UserName">Name</label>
                            <input class="w-full rounded-xl bg-white/15 text-white placeholder-slate-200/70 border border-white/20 outline-none py-3 px-4 focus:ring-2 focus:ring-indigo-400 focus:border-transparent transition"
                                   type="text" id="UserName" name="UserName" placeholder="Your name" required />
                        </div>
                        <div>
                            <label class="block text-slate-200 mb-2" for="Email">Email</label>
                            <input class="w-full rounded-xl bg-white/15 text-white placeholder-slate-200/70 border border-white/20 outline-none py-3 px-4 focus:ring-2 focus:ring-indigo-400 focus:border-transparent transition"
                                   type="email" id="Email" name="Email" placeholder="you@example.com" required />
                        </div>
                        <div>
                            <label class="block text-slate-200 mb-2" for="Description">Description</label>
                            <input class="w-full rounded-xl bg-white/15 text-white placeholder-slate-200/70 border border-white/20 outline-none py-3 px-4 focus:ring-2 focus:ring-indigo-400 focus:border-transparent transition"
                                   type="text" id="Description" name="Description_User" placeholder="Tell us about you" required />
                        </div>
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-slate-200 mb-2" for="address">Address</label>
                                <input class="w-full rounded-xl bg-white/15 text-white placeholder-slate-200/70 border border-white/20 outline-none py-3 px-4 focus:ring-2 focus:ring-indigo-400 focus:border-transparent transition"
                                       type="text" id="address" name="address" placeholder="Address" />
                            </div>
                            <div>
                                <label class="block text-slate-200 mb-2" for="phone">Phone</label>
                                <input class="w-full rounded-xl bg-white/15 text-white placeholder-slate-200/70 border border-white/20 outline-none py-3 px-4 focus:ring-2 focus:ring-indigo-400 focus:border-transparent transition"
                                       type="text" id="phone" name="phone" placeholder="Phone" maxlength="12" />
                            </div>
                        </div>
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-slate-200 mb-2" for="Password">Password</label>
                                <input class="w-full rounded-xl bg-white/15 text-white placeholder-slate-200/70 border border-white/20 outline-none py-3 px-4 focus:ring-2 focus:ring-indigo-400 focus:border-transparent transition"
                                       type="password" id="Password" name="Password" placeholder="••••••••" required />
                            </div>
                            <div>
                                <label class="block text-slate-200 mb-2" for="Date">Date</label>
                                <input class="w-full rounded-xl bg-white/15 text-white placeholder-slate-200/70 border border-white/20 outline-none py-3 px-4 focus:ring-2 focus:ring-indigo-400 focus:border-transparent transition"
                                       type="date" id="Date" name="Date" />
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="w-full inline-flex items-center justify-center gap-2 bg-indigo-500 hover:bg-indigo-600 text-white font-semibold py-3 rounded-xl mt-6 shadow-lg shadow-indigo-900/30 transition">
                        Create account
                    </button>

                    @if (ViewBag.Error != null)
                    {
                        <div class="text-red-300 text-center mt-4 text-sm">@ViewBag.Error</div>
                    }
                }

                <div class="text-center mt-6 text-slate-200">
                    Đã có tài khoản?
                    <a href="@Url.Action("Login", "Account")" class="font-semibold underline hover:text-white">Đăng nhập</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


