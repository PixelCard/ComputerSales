@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login - Computer Sales</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
        integrity="sha512-yHBXy8XcVQdBzYDrs+n8bB2ZQMi24zLz9TkF6epqq7jkQhznawUQ2hF6D3ZV8J96MwXkqAqjwJpg+HhWlK8y5w=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        .gradient-bg {
            background: linear-gradient(135deg, #0b2f63 0%, #002D6A 50%, #1e40af 100%);
        }
        .glass-effect {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        .error-message {
            animation: slideIn 0.3s ease-out;
        }
        keyframes slideIn {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .floating-animation {
            animation: float 6s ease-in-out infinite;
        }
        keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-20px); }
        }
    </style>
</head>

<body class="min-h-screen gradient-bg flex items-center justify-center relative overflow-hidden">
    <!-- Background decorative elements -->
    <div class="absolute inset-0 z-0 pointer-events-none">
        <!-- Floating geometric shapes -->
        <div class="absolute top-20 left-20 w-32 h-32 bg-orange-400/10 rounded-full floating-animation"></div>
        <div class="absolute top-40 right-32 w-24 h-24 bg-white/5 rounded-lg floating-animation" style="animation-delay: -2s;"></div>
        <div class="absolute bottom-32 left-32 w-40 h-40 bg-orange-500/10 rounded-full floating-animation" style="animation-delay: -4s;"></div>
        <div class="absolute bottom-20 right-20 w-28 h-28 bg-white/5 rounded-lg floating-animation" style="animation-delay: -1s;"></div>
        
        <!-- Subtle grid pattern -->
        <div class="absolute inset-0 opacity-5" style="background-image: radial-gradient(circle, white 1px, transparent 1px); background-size: 50px 50px;"></div>
    </div>

    <!-- Header with logo -->
    <div class="absolute top-0 left-0 right-0 z-20 p-6">
        <div class="flex items-center justify-center">
            <a href="/" class="flex items-center gap-3 hover:opacity-90 transition">
                <div class="w-12 h-12 rounded-full bg-gradient-to-br from-orange-400 to-orange-600 flex items-center justify-center shadow-lg">
                    <span class="text-white font-bold text-xl">C</span>
                </div>
                <span class="text-white font-bold text-2xl tracking-tight">Computer Sales</span>
            </a>
        </div>
    </div>

    <div class="relative z-10 flex flex-col items-center justify-center min-h-screen w-full px-4">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="bg-white/10 backdrop-blur-md rounded-xl shadow-lg p-8 w-full max-w-md border border-white/20">
                <h2 class="text-3xl font-bold text-white text-center mb-8">Login</h2>
                <div class="mb-4">
                    <label class="block text-white mb-2" for="email">Email</label>
                    <div class="flex items-center bg-white/20 rounded-lg px-3">
                        <input class="w-full bg-transparent outline-none py-2 text-white placeholder-white"
                               type="email" id="email" name="email" placeholder="Email" />
                        <span class="ml-2 text-white">
                            <!-- icon -->
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 15c2.5 0 4.847.655 6.879 1.804M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger mb-8" })
                </div>
                <div class="mb-4">
                    <label class="block text-white mb-2" for="pass">Password</label>
                    <div class="flex items-center bg-white/20 rounded-lg px-3">
                        <input class="w-full bg-transparent outline-none py-2 text-white placeholder-white"
                               type="password" id="pass" name="pass" placeholder="Password" />
                        <span class="ml-2 text-white">
                            <!-- icon -->
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c1.104 0 2-.896 2-2V7a2 2 0 10-4 0v2c0 1.104.896 2 2 2zm6 2v6a2 2 0 01-2 2H8a2 2 0 01-2-2v-6m12 0a2 2 0 00-2-2H8a2 2 0 00-2 2m12 0V7a6 6 0 10-12 0v6" /></svg>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(m => m.pass, "", new { @class = "text-danger mt-4" })
                </div>

                <!-- Remember Me & Forgot Password -->
                <div class="flex items-center justify-between my-6">
                    <label class="flex items-center text-white/80 text-sm">
                        <input type="checkbox" class="form-checkbox mr-2 rounded border-white/30 bg-white/10 text-orange-400 focus:ring-orange-400/20" />
                        Remember me
                    </label>
                    <a href="@Url.Action("ForgetPassHome", "ForgetPassword")" class="text-orange-400 hover:text-orange-300 text-sm font-medium transition-colors">
                        Forgot Password?
                    </a>
                </div>

                <!-- Login Button -->
                <button type="submit" class="w-full bg-gradient-to-r from-orange-500 to-orange-600 hover:from-orange-600 hover:to-orange-700 text-white font-bold py-3 rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200">
                    <i class="fas fa-sign-in-alt mr-2"></i>Sign In
                </button>

                <!-- Register Link -->
                <div class="text-center mt-6 text-white/80">
                    Don't have an account?
                    <a href="@Url.Action("Register", "Account")" class="text-orange-400 hover:text-orange-300 font-semibold transition-colors">
                        Create Account
                    </a>
                </div>
            </div>
        }
    </div>

    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('pass');
            const toggleIcon = document.getElementById('passwordToggleIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }

        // Add loading state to form submission
        document.querySelector('form').addEventListener('submit', function() {
            const submitBtn = this.querySelector('button[type="submit"]');
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Signing In...';
            submitBtn.disabled = true;
        });
    </script>
</body>
</html>