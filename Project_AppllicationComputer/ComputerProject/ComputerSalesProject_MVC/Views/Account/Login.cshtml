@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login - Computer Sales</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
        integrity="sha512-yHBXy8XcVQdBzYDrs+n8bB2ZQMi24zLz9TkF6epqq7jkQhznawUQ2hF6D3ZV8J96MwXkqAqjwJpg+HhWlK8y5w=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        .gradient-bg {
            background: linear-gradient(135deg, #0b2f63 0%, #002D6A 50%, #1e40af 100%);
        }
        .glass-effect {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        .error-message {
            animation: slideIn 0.3s ease-out;
        }
        keyframes slideIn {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .floating-animation {
            animation: float 6s ease-in-out infinite;
        }
        keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-20px); }
        }
    </style>
</head>

<body class="min-h-screen gradient-bg flex items-center justify-center relative overflow-hidden">
    <!-- Background decorative elements -->
    <div class="absolute inset-0 z-0 pointer-events-none">
        <!-- Floating geometric shapes -->
        <div class="absolute top-20 left-20 w-32 h-32 bg-orange-400/10 rounded-full floating-animation"></div>
        <div class="absolute top-40 right-32 w-24 h-24 bg-white/5 rounded-lg floating-animation" style="animation-delay: -2s;"></div>
        <div class="absolute bottom-32 left-32 w-40 h-40 bg-orange-500/10 rounded-full floating-animation" style="animation-delay: -4s;"></div>
        <div class="absolute bottom-20 right-20 w-28 h-28 bg-white/5 rounded-lg floating-animation" style="animation-delay: -1s;"></div>
        
        <!-- Subtle grid pattern -->
        <div class="absolute inset-0 opacity-5" style="background-image: radial-gradient(circle, white 1px, transparent 1px); background-size: 50px 50px;"></div>
    </div>

    <!-- Header with logo -->
    <div class="absolute top-0 left-0 right-0 z-20 p-6">
        <div class="flex items-center justify-center">
            <a href="/" class="flex items-center gap-3 hover:opacity-90 transition">
                <div class="w-12 h-12 rounded-full bg-gradient-to-br from-orange-400 to-orange-600 flex items-center justify-center shadow-lg">
                    <span class="text-white font-bold text-xl">C</span>
                </div>
                <span class="text-white font-bold text-2xl tracking-tight">Computer Sales</span>
            </a>
        </div>
    </div>

    <div class="relative z-10 flex flex-col items-center justify-center min-h-screen w-full px-4">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="glass-effect rounded-2xl shadow-2xl p-8 w-full max-w-md">
                <!-- Header -->
                <div class="text-center mb-8">
                    <div class="w-16 h-16 bg-gradient-to-br from-orange-400 to-orange-600 rounded-full flex items-center justify-center mx-auto mb-4 shadow-lg">
                        <i class="fas fa-sign-in-alt text-white text-xl"></i>
                    </div>
                    <h2 class="text-3xl font-bold text-white mb-2">Welcome Back</h2>
                    <p class="text-white/70">Sign in to your account</p>
                </div>

                <!-- Error Message -->
                @if (ViewBag.Error != null)
                {
                    <div class="error-message bg-red-500/20 border border-red-500/30 rounded-lg p-4 mb-6">
                        <div class="flex items-center">
                            <i class="fas fa-exclamation-triangle text-red-400 mr-3"></i>
                            <span class="text-red-200 text-sm">@ViewBag.Error</span>
                        </div>
                    </div>
                }

                <!-- Form Fields -->
                <div class="space-y-6">
                    <!-- Email Field -->
                    <div>
                        <label class="block text-white/90 mb-2 text-sm font-medium" for="email">
                            <i class="fas fa-envelope mr-2"></i>Email Address
                        </label>
                        <div class="relative">
                            <input class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-3 text-white placeholder-white/60 focus:outline-none focus:border-orange-400 focus:ring-2 focus:ring-orange-400/20 transition-all"
                                   type="email" id="email" name="email" placeholder="Enter your email" required />
                            <div class="absolute right-3 top-1/2 transform -translate-y-1/2">
                                <i class="fas fa-envelope text-white/60"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Password Field -->
                    <div>
                        <label class="block text-white/90 mb-2 text-sm font-medium" for="pass">
                            <i class="fas fa-lock mr-2"></i>Password
                        </label>
                        <div class="relative">
                            <input class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-3 pr-12 text-white placeholder-white/60 focus:outline-none focus:border-orange-400 focus:ring-2 focus:ring-orange-400/20 transition-all"
                                   type="password" id="pass" name="pass" placeholder="Enter your password" required />
                            <button type="button" onclick="togglePassword()" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-white/60 hover:text-white transition-colors">
                                <i class="fas fa-eye" id="passwordToggleIcon"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Remember Me & Forgot Password -->
                <div class="flex items-center justify-between my-6">
                    <label class="flex items-center text-white/80 text-sm">
                        <input type="checkbox" class="form-checkbox mr-2 rounded border-white/30 bg-white/10 text-orange-400 focus:ring-orange-400/20" />
                        Remember me
                    </label>
                    <a href="@Url.Action("ForgetPassHome", "ForgetPassword")" class="text-orange-400 hover:text-orange-300 text-sm font-medium transition-colors">
                        Forgot Password?
                    </a>
                </div>

                <!-- Login Button -->
                <button type="submit" class="w-full bg-gradient-to-r from-orange-500 to-orange-600 hover:from-orange-600 hover:to-orange-700 text-white font-bold py-3 rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200">
                    <i class="fas fa-sign-in-alt mr-2"></i>Sign In
                </button>

                <!-- Register Link -->
                <div class="text-center mt-6 text-white/80">
                    Don't have an account?
                    <a href="@Url.Action("Register", "Account")" class="text-orange-400 hover:text-orange-300 font-semibold transition-colors">
                        Create Account
                    </a>
                </div>
            </div>
        }
    </div>

    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('pass');
            const toggleIcon = document.getElementById('passwordToggleIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }

        // Add loading state to form submission
        document.querySelector('form').addEventListener('submit', function() {
            const submitBtn = this.querySelector('button[type="submit"]');
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Signing In...';
            submitBtn.disabled = true;
        });
    </script>
</body>
</html>