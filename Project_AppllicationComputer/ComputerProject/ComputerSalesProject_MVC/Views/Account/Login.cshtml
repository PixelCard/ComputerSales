@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Nếu đã build Tailwind, dùng link css của bạn. Nếu chưa, có thể dùng CDN để test nhanh -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="min-h-screen relative bg-gradient-to-br from-slate-900 via-indigo-900 to-slate-800">
    <!-- Decorative background -->
    <div class="absolute inset-0 -z-10 overflow-hidden">
        <div class="absolute -top-32 -left-32 h-96 w-96 rounded-full bg-indigo-600/30 blur-3xl"></div>
        <div class="absolute -bottom-24 -right-24 h-96 w-96 rounded-full bg-fuchsia-500/20 blur-3xl"></div>
    </div>

    <div class="min-h-screen flex items-center justify-center px-4">
        <div class="w-full max-w-[1100px] grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
            <!-- Left: Branding/hero -->
            <div class="hidden lg:block text-slate-100">
                <div class="space-y-6">
                    <div class="inline-flex items-center gap-3">
                        <div class="h-10 w-10 rounded-xl bg-white/10 backdrop-blur flex items-center justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="h-6 w-6 text-white"><path d="M12 3l9 4.5v9L12 21 3 16.5v-9L12 3zm0 2.06L5 8v8l7 3.06L19 16V8l-7-2.94z"/></svg>
                        </div>
                        <span class="text-xl font-semibold tracking-wide">ComputerSales</span>
                    </div>
                    <h1 class="text-4xl font-extrabold leading-tight">Welcome back</h1>
                    <p class="text-slate-300 max-w-md">Sign in to manage your orders, track devices, and continue your shopping securely.</p>
                    <ul class="text-slate-300/90 space-y-2">
                        <li class="flex items-center gap-2"><span class="h-1.5 w-1.5 rounded-full bg-emerald-400"></span> Secure authentication</li>
                        <li class="flex items-center gap-2"><span class="h-1.5 w-1.5 rounded-full bg-emerald-400"></span> Fast checkout experience</li>
                        <li class="flex items-center gap-2"><span class="h-1.5 w-1.5 rounded-full bg-emerald-400"></span> Personalized recommendations</li>
                    </ul>
                </div>
            </div>

            <!-- Right: Auth card -->
            <div class="bg-white/10 backdrop-blur-xl rounded-2xl border border-white/15 shadow-2xl p-6 sm:p-8">
                <div class="mb-6 text-center lg:text-left">
                    <h2 class="text-2xl sm:text-3xl font-bold text-white">Sign in</h2>
                    <p class="text-slate-200/80 mt-1">Use your account email and password</p>
                </div>

                @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="space-y-5">
                        <div>
                            <label class="block text-slate-200 mb-2" for="email">Email</label>
                            <div class="relative">
                                <input class="w-full rounded-xl bg-white/15 text-white placeholder-slate-200/70 border border-white/20 outline-none py-3 pl-10 pr-3 focus:ring-2 focus:ring-indigo-400 focus:border-transparent transition"
                                       type="text" id="email" name="email" placeholder="you@example.com" required />
                                <span class="absolute inset-y-0 left-3 flex items-center text-slate-200/80">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12H8m8-4H8m8 8H8M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                                </span>
                            </div>
                        </div>

                        <div>
                            <label class="block text-slate-200 mb-2" for="pass">Password</label>
                            <div class="relative">
                                <input class="w-full rounded-xl bg-white/15 text-white placeholder-slate-200/70 border border-white/20 outline-none py-3 pl-10 pr-3 focus:ring-2 focus:ring-indigo-400 focus:border-transparent transition"
                                       type="password" id="pass" name="pass" placeholder="••••••••" required />
                                <span class="absolute inset-y-0 left-3 flex items-center text-slate-200/80">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c1.104 0 2-.896 2-2V7a2 2 0 10-4 0v2c0 1.104.896 2 2 2zm6 2v6a2 2 0 01-2 2H8a2 2 0 01-2-2v-6m12 0a2 2 0 00-2-2H8a2 2 0 00-2 2m12 0V7a6 6 0 10-12 0v6" /></svg>
                                </span>
                            </div>
                        </div>

                        <div class="flex items-center justify-between">
                            <label class="flex items-center text-slate-200">
                                <input type="checkbox" class="h-4 w-4 rounded border-white/30 bg-transparent mr-2" />
                                Remember me
                            </label>
                            <a href="#" class="text-slate-100 hover:text-white text-sm">Forgot password?</a>
                        </div>

                        <button type="submit" class="w-full inline-flex items-center justify-center gap-2 bg-indigo-500 hover:bg-indigo-600 text-white font-semibold py-3 rounded-xl shadow-lg shadow-indigo-900/30 transition">
                            <span>Sign in</span>
                            <svg class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/></svg>
                        </button>

                        @if (ViewBag.Error != null)
                        {
                            <div class="text-red-300 text-center">@ViewBag.Error</div>
                        }
                    </div>
                }

                <div class="text-center mt-6 text-slate-200">
                    Don't have an account?
                    <a href="@Url.Action("Register", "Account")" class="font-semibold underline hover:text-white">Create one</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>